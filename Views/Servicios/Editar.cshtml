@model billing_system.Models.Entities.Servicio
@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Editar Servicio</h2>
        <p class="text-sm text-gray-500">Modifica los datos del servicio</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
        <form method="post" action="/servicios/editar/@Model.Id" class="space-y-6">
            <input type="hidden" asp-for="Id" name="Id" value="@Model.Id" />
            
            <div>
                <label for="Nombre" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Nombre del Servicio *</label>
                <input type="text" asp-for="Nombre" name="Nombre" value="@Model.Nombre" required 
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <span asp-validation-for="Nombre" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label for="Precio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Precio (C$) *</label>
                <input type="number" asp-for="Precio" name="Precio" step="0.01" min="0.01" value="@Model.Precio" required 
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <span asp-validation-for="Precio" class="text-red-500 text-xs"></span>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">El nuevo precio se aplicará a facturas creadas después de este cambio</p>
            </div>

            <div>
                <label class="flex items-center space-x-2">
                    @if (Model.Activo)
                    {
                        <input type="checkbox" name="Activo" value="true" checked 
                               class="rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500" />
                    }
                    else
                    {
                        <input type="checkbox" name="Activo" value="true" 
                               class="rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500" />
                    }
                    <input type="hidden" name="Activo" value="false" />
                    <span class="text-sm text-gray-700">Servicio Activo</span>
                </label>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Los servicios inactivos no aparecerán al crear facturas</p>
            </div>

            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-amber-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div class="text-sm text-amber-800">
                        <p class="font-medium mb-1">⚠️ Advertencia:</p>
                        <p class="text-amber-700">Al cambiar el precio, las facturas ya creadas mantendrán su precio original. Solo las nuevas facturas usarán el nuevo precio.</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                <a href="/servicios" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700">
                    Cancelar
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

