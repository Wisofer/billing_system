@model List<billing_system.Models.Entities.Servicio>
@{
    var esAdministrador = ViewBag.EsAdministrador as bool? ?? false;
}

<div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <div class="border-b border-gray-100 px-6 py-4">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Lista de Servicios
        </h3>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Creación</th>
                    @if (esAdministrador)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                    }
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
                @if (Model.Any())
                {
                    @foreach (var servicio in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@servicio.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900">@servicio.Nombre</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-semibold text-gray-900">C$ @servicio.Precio.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (servicio.Activo)
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-green-50 text-green-700">Activo</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-red-50 text-red-700">Inactivo</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@servicio.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            @if (esAdministrador)
                            {
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center space-x-2">
                                        <a href="/servicios/editar/@servicio.Id" class="text-gray-600 hover:text-gray-700 hover:bg-gray-50 p-2 rounded-lg transition-colors" title="Editar servicio">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <form method="post" action="/servicios/eliminar/@servicio.Id" class="inline" onsubmit="return confirm('¿Estás seguro de eliminar este servicio?');">
                                            <button type="submit" class="text-red-600 hover:text-red-700 hover:bg-red-50 p-2 rounded-lg transition-colors" title="Eliminar servicio">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="@(esAdministrador ? 6 : 5)" class="px-6 py-8 text-center text-sm text-gray-500">
                            No hay servicios registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

