@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMSINET</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-white dark:bg-gray-950 flex items-center justify-center p-4">
    <div class="w-full max-w-sm">
        <!-- Header minimalista -->
        <div class="mb-12 text-center">
            <div class="inline-block mb-6">
                <img src="~/images/logo.png" alt="Logo" class="w-12 h-12 object-contain" />
            </div>
            <h1 class="text-3xl font-light text-gray-900 dark:text-white tracking-tight mb-2">EMSINET</h1>
            <p class="text-xs text-gray-400 dark:text-gray-500 uppercase tracking-widest">Iniciar Sesión</p>
        </div>

        <!-- Formulario -->
        <div class="space-y-6">
            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="px-4 py-3 bg-red-50 dark:bg-red-950/30 border-l-2 border-red-500 text-red-700 dark:text-red-400 text-sm">
                    @ViewBag.Error
                </div>
            }
            
            <form action="/login" method="post" class="space-y-6">
                @if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"].ToString()))
                {
                    <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                }
                
                <!-- Usuario -->
                <div class="space-y-1">
                    <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                        Usuario
                    </label>
                    <input 
                        type="text" 
                        name="NombreUsuario" 
                        class="w-full px-0 py-3 border-0 border-b-2 border-gray-200 dark:border-gray-800 bg-transparent text-gray-900 dark:text-white focus:border-blue-600 dark:focus:border-blue-500 outline-none transition-colors placeholder:text-gray-400 dark:placeholder:text-gray-600"
                        placeholder="usuario"
                        required
                        autocomplete="username"
                    />
                </div>

                <!-- Contraseña -->
                <div class="space-y-1">
                    <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                        Contraseña
                    </label>
                    <div class="relative">
                    <input 
                        type="password" 
                            id="passwordInput"
                        name="Contrasena" 
                            class="w-full px-0 py-3 pr-10 border-0 border-b-2 border-gray-200 dark:border-gray-800 bg-transparent text-gray-900 dark:text-white focus:border-blue-600 dark:focus:border-blue-500 outline-none transition-colors placeholder:text-gray-400 dark:placeholder:text-gray-600"
                        placeholder="••••••••"
                        required
                        autocomplete="current-password"
                    />
                        <button 
                            type="button"
                            id="togglePassword"
                            class="absolute right-0 top-1/2 -translate-y-1/2 p-2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 focus:outline-none transition-colors"
                            aria-label="Mostrar contraseña"
                        >
                            <!-- Icono ojo abierto (oculto por defecto) -->
                            <svg id="eyeIcon" class="hidden w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <!-- Icono ojo cerrado (visible por defecto) -->
                            <svg id="eyeOffIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Botón -->
                <div class="pt-4">
                    <button 
                        type="submit" 
                        class="w-full bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium py-3.5 px-4 transition-opacity hover:opacity-90 active:opacity-75"
                    >
                        Entrar
                    </button>
                </div>
            </form>
        </div>

        <!-- Footer minimalista -->
        <div class="mt-16 text-center">
            <p class="text-xs text-gray-400 dark:text-gray-600">
                Desarrollado por
                <a href="https://www.cowib.es/" target="_blank" rel="noopener noreferrer" 
                   class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors">
                    COWIB
                </a>
            </p>
        </div>
    </div>

    <script>
        // Toggle mostrar/ocultar contraseña
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeOffIcon = document.getElementById('eyeOffIcon');

            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                // Alternar iconos
                if (type === 'text') {
                    // Contraseña visible: mostrar ojo abierto, ocultar ojo tachado
                    eyeIcon.classList.remove('hidden');
                    eyeOffIcon.classList.add('hidden');
                    togglePassword.setAttribute('aria-label', 'Ocultar contraseña');
                } else {
                    // Contraseña oculta: mostrar ojo tachado, ocultar ojo abierto
                    eyeIcon.classList.add('hidden');
                    eyeOffIcon.classList.remove('hidden');
                    togglePassword.setAttribute('aria-label', 'Mostrar contraseña');
                }
            });
        });
    </script>
</body>
</html>
