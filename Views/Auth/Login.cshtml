@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMSINET</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-white dark:bg-gray-950 flex items-center justify-center p-4">
    <div class="w-full max-w-sm">
        <!-- Header minimalista -->
        <div class="mb-12 text-center">
            <div class="inline-block mb-6">
                <img src="~/images/logo.png" alt="Logo" class="w-12 h-12 object-contain" />
            </div>
            <h1 class="text-3xl font-light text-gray-900 dark:text-white tracking-tight mb-2">EMSINET</h1>
            <p class="text-xs text-gray-400 dark:text-gray-500 uppercase tracking-widest">Iniciar Sesión</p>
        </div>

        <!-- Formulario -->
        <div class="space-y-6">
            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="px-4 py-3 bg-red-50 dark:bg-red-950/30 border-l-2 border-red-500 text-red-700 dark:text-red-400 text-sm">
                    @ViewBag.Error
                </div>
            }
            
            <form action="/login" method="post" class="space-y-6">
                @if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"].ToString()))
                {
                    <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                }
                
                <!-- Usuario -->
                <div class="space-y-1">
                    <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                        Usuario
                    </label>
                    <input 
                        type="text" 
                        name="NombreUsuario" 
                        class="w-full px-0 py-3 border-0 border-b-2 border-gray-200 dark:border-gray-800 bg-transparent text-gray-900 dark:text-white focus:border-blue-600 dark:focus:border-blue-500 outline-none transition-colors placeholder:text-gray-400 dark:placeholder:text-gray-600"
                        placeholder="usuario"
                        required
                        autocomplete="username"
                    />
                </div>

                <!-- Contraseña -->
                <div class="space-y-1">
                    <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                        Contraseña
                    </label>
                    <input 
                        type="password" 
                        name="Contrasena" 
                        class="w-full px-0 py-3 border-0 border-b-2 border-gray-200 dark:border-gray-800 bg-transparent text-gray-900 dark:text-white focus:border-blue-600 dark:focus:border-blue-500 outline-none transition-colors placeholder:text-gray-400 dark:placeholder:text-gray-600"
                        placeholder="••••••••"
                        required
                        autocomplete="current-password"
                    />
                </div>

                <!-- Botón -->
                <div class="pt-4">
                    <button 
                        type="submit" 
                        class="w-full bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium py-3.5 px-4 transition-opacity hover:opacity-90 active:opacity-75"
                    >
                        Entrar
                    </button>
                </div>
            </form>
        </div>

        <!-- Footer minimalista -->
        <div class="mt-16 text-center">
            <p class="text-xs text-gray-400 dark:text-gray-600">
                <a href="https://www.cowib.es/" target="_blank" rel="noopener noreferrer" 
                   class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors">
                    COWIB
                </a>
            </p>
        </div>
    </div>
</body>
</html>
