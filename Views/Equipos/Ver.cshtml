@model billing_system.Models.Entities.Equipo
@using billing_system.Utils
@{
    ViewData["Title"] = "Detalles del Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Detalles del Equipo</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">Información completa del equipo @Model.Codigo</p>
        </div>
        <div class="flex items-center space-x-2">
            <a href="/equipos/editar/@Model.Id" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <span>Editar</span>
            </a>
            <a href="/equipos" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700 dark:text-gray-300">
                Volver
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_Notificaciones")

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Información General</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Código</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white font-semibold">@Model.Codigo</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nombre</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Nombre</dd>
                </div>
                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Descripción</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Descripcion</dd>
                    </div>
                }
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Categoría</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white">@(Model.CategoriaEquipo?.Nombre ?? "-")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Ubicación</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white">@(Model.Ubicacion?.Nombre ?? "-")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Estado</dt>
                    <dd class="mt-1">
                        @{
                            var estadoColor = Model.Estado switch
                            {
                                SD.EstadoEquipoDisponible => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                SD.EstadoEquipoEnUso => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                SD.EstadoEquipoDanado => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                SD.EstadoEquipoEnReparacion => "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300",
                                SD.EstadoEquipoRetirado => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                                _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                            };
                        }
                        <span class="px-2 py-1 text-xs font-medium rounded-full @estadoColor">@Model.Estado</span>
                    </dd>
                </div>
            </dl>
        </div>

        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Detalles Técnicos</h3>
            <dl class="space-y-3">
                @if (!string.IsNullOrEmpty(Model.Marca))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Marca</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Marca</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Modelo))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Modelo</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Modelo</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.NumeroSerie))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Número de Serie / MAC</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white font-mono">@Model.NumeroSerie</dd>
                    </div>
                }
                @if (Model.Proveedor != null)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Proveedor</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Proveedor.Nombre</dd>
                    </div>
                }
                @if (Model.FechaAdquisicion.HasValue)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Fecha de Adquisición</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.FechaAdquisicion.Value.ToString("dd/MM/yyyy")</dd>
                    </div>
                }
                @if (Model.PrecioCompra.HasValue)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Precio de Compra</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white font-semibold">C$ @Model.PrecioCompra.Value.ToString("N2")</dd>
                    </div>
                }
            </dl>
        </div>

        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Stock</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Stock Actual</dt>
                    <dd class="mt-1 text-2xl font-semibold @(Model.Stock <= Model.StockMinimo && Model.StockMinimo > 0 ? "text-red-600 dark:text-red-400" : "text-gray-900 dark:text-white")">
                        @Model.Stock
                        @if (Model.Stock <= Model.StockMinimo && Model.StockMinimo > 0)
                        {
                            <span class="ml-2 text-sm text-red-500">⚠ Stock bajo</span>
                        }
                    </dd>
                </div>
                @if (Model.StockMinimo > 0)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Stock Mínimo</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.StockMinimo</dd>
                    </div>
                }
            </dl>
        </div>

        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Información Adicional</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Fecha de Creación</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                </div>
                @if (Model.FechaActualizacion.HasValue)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Última Actualización</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.FechaActualizacion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Observaciones</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Observaciones</dd>
                    </div>
                }
            </dl>
        </div>
    </div>

    @if (Model.HistorialEstados != null && Model.HistorialEstados.Any())
    {
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Historial de Estados</h3>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300">Fecha</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300">Estado Anterior</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300">Estado Nuevo</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300">Usuario</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300">Motivo</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var historial in Model.HistorialEstados.OrderByDescending(h => h.FechaCambio))
                        {
                            <tr>
                                <td class="px-4 py-2 text-sm text-gray-900 dark:text-white">@historial.FechaCambio.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="px-4 py-2 text-sm text-gray-600 dark:text-gray-300">@(string.IsNullOrEmpty(historial.EstadoAnterior) ? "-" : historial.EstadoAnterior)</td>
                                <td class="px-4 py-2 text-sm text-gray-900 dark:text-white font-medium">@historial.EstadoNuevo</td>
                                <td class="px-4 py-2 text-sm text-gray-600 dark:text-gray-300">@(historial.Usuario?.NombreCompleto ?? "-")</td>
                                <td class="px-4 py-2 text-sm text-gray-600 dark:text-gray-300">@(historial.Motivo ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

