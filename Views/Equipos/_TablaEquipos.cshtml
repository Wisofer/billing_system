@model billing_system.Models.ViewModels.PagedResult<billing_system.Models.Entities.Equipo>
@using billing_system.Utils
@{
    var busqueda = ViewBag.Busqueda as string ?? "";
    var estado = ViewBag.Estado as string ?? "";
    var categoriaId = ViewBag.CategoriaId as int?;
    var ubicacionId = ViewBag.UbicacionId as int?;
    var tamanoPaginaActual = ViewBag.TamanoPagina as int? ?? 25;
    var categorias = ViewBag.Categorias as List<billing_system.Models.Entities.CategoriaEquipo> ?? new List<billing_system.Models.Entities.CategoriaEquipo>();
    var ubicaciones = ViewBag.Ubicaciones as List<billing_system.Models.Entities.Ubicacion> ?? new List<billing_system.Models.Entities.Ubicacion>();
    var estados = ViewBag.Estados as string[] ?? new string[0];
}

<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
    <div class="border-b border-gray-100 dark:border-gray-700 px-6 py-4">
        <div class="flex items-center justify-between flex-wrap gap-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                Lista de Equipos
            </h3>
            <form method="get" action="/equipos" class="flex items-center space-x-2 flex-wrap gap-2">
                <input type="hidden" name="pagina" value="1" />
                
                <select name="estado" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todos los estados</option>
                    @foreach (var est in estados)
                    {
                        <option value="@est" @(estado == est ? "selected" : "")>@est</option>
                    }
                </select>
                
                <select name="categoriaId" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todas las categorías</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat.Id" @(categoriaId == cat.Id ? "selected" : "")>@cat.Nombre</option>
                    }
                </select>
                
                <select name="ubicacionId" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todas las ubicaciones</option>
                    @foreach (var ubi in ubicaciones)
                    {
                        <option value="@ubi.Id" @(ubicacionId == ubi.Id ? "selected" : "")>@ubi.Nombre</option>
                    }
                </select>
                
                <input type="text" name="busqueda" value="@busqueda" placeholder="Buscar..." 
                       class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64">
                <button type="submit" class="p-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
                
                <label class="text-xs text-gray-500 dark:text-gray-400">
                    Tamaño:
                    <select name="tamanoPagina" class="ml-1 px-2 py-1 text-xs border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                        <option value="10" @(tamanoPaginaActual == 10 ? "selected" : "")>10</option>
                        <option value="25" @(tamanoPaginaActual == 25 ? "selected" : "")>25</option>
                        <option value="50" @(tamanoPaginaActual == 50 ? "selected" : "")>50</option>
                    </select>
                </label>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-700 border-b border-gray-100 dark:border-gray-600">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Código</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Categoría</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Ubicación</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Stock</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-100 dark:divide-gray-700">
                @if (Model.Items.Any())
                {
                    @foreach (var equipo in Model.Items)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">@equipo.Codigo</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-gray-900 dark:text-white">@equipo.Nombre</div>
                                @if (!string.IsNullOrEmpty(equipo.Marca) || !string.IsNullOrEmpty(equipo.Modelo))
                                {
                                    <div class="text-sm text-gray-500 dark:text-gray-400">
                                        @if (!string.IsNullOrEmpty(equipo.Marca))
                                        {
                                            <span>@equipo.Marca</span>
                                        }
                                        @if (!string.IsNullOrEmpty(equipo.Modelo))
                                        {
                                            <span>@equipo.Modelo</span>
                                        }
                                    </div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @(equipo.CategoriaEquipo?.Nombre ?? "-")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @(equipo.Ubicacion?.Nombre ?? "-")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium @(equipo.Stock <= equipo.StockMinimo && equipo.StockMinimo > 0 ? "text-red-600 dark:text-red-400" : "text-gray-900 dark:text-white")">
                                    @equipo.Stock
                                </span>
                                @if (equipo.StockMinimo > 0 && equipo.Stock <= equipo.StockMinimo)
                                {
                                    <span class="ml-1 text-xs text-red-500">⚠</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    var estadoColor = equipo.Estado switch
                                    {
                                        SD.EstadoEquipoDisponible => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                        SD.EstadoEquipoEnUso => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                        SD.EstadoEquipoDanado => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                        SD.EstadoEquipoEnReparacion => "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300",
                                        SD.EstadoEquipoRetirado => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                                        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                    };
                                }
                                <span class="px-2 py-1 text-xs font-medium rounded-full @estadoColor">
                                    @equipo.Estado
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex items-center space-x-2">
                                    <a href="/equipos/ver/@equipo.Id" class="text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" title="Ver detalles">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="/equipos/editar/@equipo.Id" class="text-green-600 dark:text-green-400 hover:text-green-900 dark:hover:text-green-300" title="Editar">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <form method="post" action="/equipos/eliminar/@equipo.Id" class="inline" onsubmit="return confirm('¿Estás seguro de eliminar el equipo \'@equipo.Nombre\'? Esta acción no se puede deshacer.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" 
                                                class="text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" 
                                                title="Eliminar equipo">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                            <div class="flex flex-col items-center">
                                <svg class="w-12 h-12 mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                </svg>
                                <p>No se encontraron equipos</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

