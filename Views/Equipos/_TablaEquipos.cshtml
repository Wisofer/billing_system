@model billing_system.Models.ViewModels.PagedResult<billing_system.Models.Entities.Equipo>
@using billing_system.Utils
@{
    var busqueda = ViewBag.Busqueda as string ?? "";
    var estado = ViewBag.Estado as string ?? "";
    var estadoSistema = ViewBag.EstadoSistema as string ?? "activos";
    var categoriaId = ViewBag.CategoriaId as int?;
    var ubicacionId = ViewBag.UbicacionId as int?;
    var tamanoPaginaActual = ViewBag.TamanoPagina as int? ?? 25;
    var categorias = ViewBag.Categorias as List<billing_system.Models.Entities.CategoriaEquipo> ?? new List<billing_system.Models.Entities.CategoriaEquipo>();
    var ubicaciones = ViewBag.Ubicaciones as List<billing_system.Models.Entities.Ubicacion> ?? new List<billing_system.Models.Entities.Ubicacion>();
    var estados = ViewBag.Estados as string[] ?? new string[0];
}

<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
    <div class="border-b border-gray-100 dark:border-gray-700 px-6 py-4">
        <div class="flex items-center justify-between flex-wrap gap-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                Lista de Equipos
            </h3>
            <form method="get" action="/equipos" class="flex items-center space-x-2 flex-wrap gap-2">
                <input type="hidden" name="pagina" value="1" />
                
                <select name="estadoSistema" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 font-semibold">
                    <option value="activos" @(estadoSistema == "activos" ? "selected" : "")>‚úÖ Solo Activos</option>
                    <option value="deshabilitados" @(estadoSistema == "deshabilitados" ? "selected" : "")>üîí Solo Deshabilitados</option>
                    <option value="todos" @(estadoSistema == "todos" ? "selected" : "")>üìã Todos</option>
                </select>
                
                <select name="estado" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todos los estados</option>
                    @foreach (var est in estados)
                    {
                        <option value="@est" @(estado == est ? "selected" : "")>@est</option>
                    }
                </select>
                
                <select name="categoriaId" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todas las categor√≠as</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat.Id" @(categoriaId == cat.Id ? "selected" : "")>@cat.Nombre</option>
                    }
                </select>
                
                <select name="ubicacionId" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todas las ubicaciones</option>
                    @foreach (var ubi in ubicaciones)
                    {
                        <option value="@ubi.Id" @(ubicacionId == ubi.Id ? "selected" : "")>@ubi.Nombre</option>
                    }
                </select>
                
                <input type="text" name="busqueda" value="@busqueda" placeholder="Buscar..." 
                       class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64">
                
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-colors flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    <span>Filtrar</span>
                </button>
                
                <label class="text-xs text-gray-500 dark:text-gray-400">
                    Tama√±o:
                    <select name="tamanoPagina" class="ml-1 px-2 py-1 text-xs border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                        <option value="10" @(tamanoPaginaActual == 10 ? "selected" : "")>10</option>
                        <option value="25" @(tamanoPaginaActual == 25 ? "selected" : "")>25</option>
                        <option value="50" @(tamanoPaginaActual == 50 ? "selected" : "")>50</option>
                    </select>
                </label>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-700 border-b border-gray-100 dark:border-gray-600">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">C√≥digo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Categor√≠a</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Ubicaci√≥n</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Stock</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Asignado a</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-100 dark:divide-gray-700">
                @if (Model.Items.Any())
                {
                    @foreach (var equipo in Model.Items)
                    {
                        <tr class="@(equipo.Activo ? "hover:bg-gray-50 dark:hover:bg-gray-700" : "bg-gray-100 dark:bg-gray-700/50 opacity-75") transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center space-x-2">
                                    <span class="text-sm font-medium @(equipo.Activo ? "text-gray-900 dark:text-white" : "text-gray-500 dark:text-gray-400")">@equipo.Codigo</span>
                                    @if (!equipo.Activo)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300">
                                            üîí DESHABILITADO
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium @(equipo.Activo ? "text-gray-900 dark:text-white" : "text-gray-500 dark:text-gray-400")">@equipo.Nombre</div>
                                @if (!string.IsNullOrEmpty(equipo.Marca) || !string.IsNullOrEmpty(equipo.Modelo))
                                {
                                    <div class="text-sm text-gray-500 dark:text-gray-400">
                                        @if (!string.IsNullOrEmpty(equipo.Marca))
                                        {
                                            <span>@equipo.Marca</span>
                                        }
                                        @if (!string.IsNullOrEmpty(equipo.Modelo))
                                        {
                                            <span>@equipo.Modelo</span>
                                        }
                                    </div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @(equipo.CategoriaEquipo?.Nombre ?? "-")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @(equipo.Ubicacion?.Nombre ?? "-")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium @(equipo.Stock <= equipo.StockMinimo && equipo.StockMinimo > 0 ? "text-red-600 dark:text-red-400" : "text-gray-900 dark:text-white")">
                                    @equipo.Stock
                                </span>
                                @if (equipo.StockMinimo > 0 && equipo.Stock <= equipo.StockMinimo)
                                {
                                    <span class="ml-1 text-xs text-red-500">‚ö†</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    var estadoColor = equipo.Estado switch
                                    {
                                        SD.EstadoEquipoDisponible => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                        SD.EstadoEquipoEnUso => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                        SD.EstadoEquipoDanado => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                        SD.EstadoEquipoEnReparacion => "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300",
                                        SD.EstadoEquipoRetirado => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                                        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                    };
                                }
                                <span class="px-2 py-1 text-xs font-medium rounded-full @estadoColor">
                                    @equipo.Estado
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @{
                                    var asignacionActiva = equipo.AsignacionesEquipo?.FirstOrDefault(a => a.Estado == "Activa");
                                }
                                @if (asignacionActiva != null && asignacionActiva.Cliente != null)
                                {
                                    <div class="text-sm">
                                        <span class="font-medium text-blue-600 dark:text-blue-400">@asignacionActiva.Cliente.Codigo</span>
                                        <div class="text-xs text-gray-600 dark:text-gray-400">@asignacionActiva.Cliente.Nombre</div>
                                    </div>
                                }
                                else if (asignacionActiva != null && !string.IsNullOrEmpty(asignacionActiva.EmpleadoNombre))
                                {
                                    <div class="text-sm">
                                        <span class="font-medium text-purple-600 dark:text-purple-400">Empleado</span>
                                        <div class="text-xs text-gray-600 dark:text-gray-400">@asignacionActiva.EmpleadoNombre</div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-sm text-gray-400 dark:text-gray-500 italic">Sin asignar</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex items-center space-x-1">
                                    <!-- Ver detalles -->
                                    <a href="/equipos/ver/@equipo.Id" class="p-1 text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded" title="Ver detalles">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    
                                    <!-- Editar -->
                                    <a href="/equipos/editar/@equipo.Id" class="p-1 text-green-600 dark:text-green-400 hover:text-green-900 dark:hover:text-green-300 hover:bg-green-50 dark:hover:bg-green-900/20 rounded" title="Editar">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    
                                    <!-- Ver historial -->
                                    <button type="button" 
                                            onclick="verHistorial(@equipo.Id, '@equipo.Nombre')"
                                            class="p-1 text-purple-600 dark:text-purple-400 hover:text-purple-900 dark:hover:text-purple-300 hover:bg-purple-50 dark:hover:bg-purple-900/20 rounded" 
                                            title="Ver historial completo">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                    </button>
                                    
                                    <!-- Cambio r√°pido de estado -->
                                    <div class="relative inline-block">
                                        <button type="button" 
                                                onclick="toggleDropdownEstado(@equipo.Id)"
                                                class="p-1 text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 rounded" 
                                                title="Cambiar estado">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                            </svg>
                                        </button>
                                        <div id="dropdown-estado-@equipo.Id" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-md shadow-lg z-50 border border-gray-200 dark:border-gray-600">
                                            <form method="post" action="/equipos/cambiar-estado-rapido" class="py-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="equipoId" value="@equipo.Id" />
                                                <button type="submit" name="nuevoEstado" value="Disponible" class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                    <span class="inline-block w-2 h-2 rounded-full bg-green-500 mr-2"></span>Disponible
                                                </button>
                                                <button type="submit" name="nuevoEstado" value="En Uso" class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                    <span class="inline-block w-2 h-2 rounded-full bg-blue-500 mr-2"></span>En Uso
                                                </button>
                                                <button type="submit" name="nuevoEstado" value="Da√±ado" class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                    <span class="inline-block w-2 h-2 rounded-full bg-red-500 mr-2"></span>Da√±ado
                                                </button>
                                                <button type="submit" name="nuevoEstado" value="En Reparaci√≥n" class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                    <span class="inline-block w-2 h-2 rounded-full bg-yellow-500 mr-2"></span>En Reparaci√≥n
                                                </button>
                                                <button type="submit" name="nuevoEstado" value="Retirado" class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                    <span class="inline-block w-2 h-2 rounded-full bg-gray-500 mr-2"></span>Retirado
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    
                                    <!-- Devolver asignaci√≥n (solo si est√° asignado) -->
                                    @if (asignacionActiva != null)
                                    {
                                        <form method="post" action="/equipos/devolver-asignacion/@equipo.Id" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    onclick="return confirm('¬øDevolver el equipo asignado a @(asignacionActiva.Cliente?.Nombre ?? asignacionActiva.EmpleadoNombre)?')"
                                                    class="p-1 text-orange-600 dark:text-orange-400 hover:text-orange-900 dark:hover:text-orange-300 hover:bg-orange-50 dark:hover:bg-orange-900/20 rounded" 
                                                    title="Devolver asignaci√≥n">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                                                </svg>
                                            </button>
                                        </form>
                                    }
                                    
                                    <!-- Habilitar/Deshabilitar -->
                                    <form method="post" action="/equipos/toggle-activo/@equipo.Id" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" 
                                                onclick="return confirm('@(equipo.Activo ? "¬øDeshabilitar" : "¬øHabilitar") el equipo @equipo.Nombre?')"
                                                class="p-1 @(equipo.Activo ? "text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700" : "text-green-600 dark:text-green-400 hover:text-green-900 dark:hover:text-green-300 hover:bg-green-50 dark:hover:bg-green-900/20") rounded" 
                                                title="@(equipo.Activo ? "Deshabilitar" : "Habilitar") equipo">
                                            @if (equipo.Activo)
                                            {
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            }
                                        </button>
                                    </form>
                                    
                                    <!-- Eliminar -->
                                    <button type="button" 
                                            onclick="mostrarModalEliminar(@equipo.Id, '@equipo.Nombre', '@(asignacionActiva != null)', '@(asignacionActiva?.Cliente?.Codigo ?? "")', '@(asignacionActiva?.Cliente?.Nombre ?? "")', '@(asignacionActiva?.EmpleadoNombre ?? "")')"
                                            class="p-1 text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300 hover:bg-red-50 dark:hover:bg-red-900/20 rounded" 
                                            title="Eliminar equipo">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                            <div class="flex flex-col items-center">
                                <svg class="w-12 h-12 mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                </svg>
                                <p>No se encontraron equipos</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de Historial Completo -->
<div id="modalHistorial" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-10 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 shadow-lg rounded-md bg-white dark:bg-gray-800 mb-10">
        <div class="mt-3">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        üìä Historial Completo del Equipo
                    </h3>
                    <div class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                        <span id="historialEquipoCodigo" class="font-semibold"></span> - 
                        <span id="historialEquipoNombre"></span>
                        <span id="historialEquipoEstado" class="ml-2 px-2 py-1 text-xs rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"></span>
                    </div>
                </div>
                <button id="btnCerrarHistorial" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 max-h-[70vh] overflow-y-auto">
                <!-- Asignaciones -->
                <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Asignaciones
                    </h4>
                    <div id="historialAsignaciones" class="space-y-3">
                        <!-- Se llenar√° con JavaScript -->
                    </div>
                </div>
                
                <!-- Cambios de Estado -->
                <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
