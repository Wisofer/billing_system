<script>
function mostrarModalEliminar(equipoId, equipoNombre, tieneAsignacion, clienteCodigo, clienteNombre, empleadoNombre) {
    // Actualizar informaci√≥n del equipo
    document.getElementById('equipoNombreEliminar').textContent = equipoNombre;
    
    // Actualizar action del formulario
    document.getElementById('formEliminarEquipo').action = '/equipos/eliminar/' + equipoId;
    
    // Mostrar/ocultar advertencia de asignaci√≥n
    const advertencia = document.getElementById('advertenciaAsignacion');
    const asignacionInfo = document.getElementById('asignacionInfo');
    
    if (tieneAsignacion === 'True') {
        advertencia.classList.remove('hidden');
        
        // Determinar si es cliente o empleado
        if (clienteCodigo && clienteNombre) {
            asignacionInfo.innerHTML = `
                <span class="text-blue-600 dark:text-blue-400 font-semibold">üë§ Cliente:</span><br>
                <span class="text-gray-900 dark:text-white">${clienteCodigo} - ${clienteNombre}</span>
            `;
        } else if (empleadoNombre) {
            asignacionInfo.innerHTML = `
                <span class="text-purple-600 dark:text-purple-400 font-semibold">üë®‚Äçüíº Empleado:</span><br>
                <span class="text-gray-900 dark:text-white">${empleadoNombre}</span>
            `;
        }
    } else {
        advertencia.classList.add('hidden');
    }
    
    // Mostrar modal
    document.getElementById('modalEliminarEquipo').classList.remove('hidden');
}

// Cerrar modal al hacer clic en cancelar
document.getElementById('btnCancelarEliminar').addEventListener('click', function() {
    document.getElementById('modalEliminarEquipo').classList.add('hidden');
});

// Cerrar modal al hacer clic fuera del contenido
document.getElementById('modalEliminarEquipo').addEventListener('click', function(e) {
    if (e.target === this) {
        this.classList.add('hidden');
    }
});

// Toggle dropdown de estado
function toggleDropdownEstado(equipoId) {
    const dropdown = document.getElementById('dropdown-estado-' + equipoId);
    const allDropdowns = document.querySelectorAll('[id^="dropdown-estado-"]');
    
    // Cerrar todos los dem√°s dropdowns
    allDropdowns.forEach(d => {
        if (d.id !== 'dropdown-estado-' + equipoId) {
            d.classList.add('hidden');
        }
    });
    
    // Toggle el dropdown actual
    dropdown.classList.toggle('hidden');
}

// Cerrar dropdowns al hacer clic fuera
document.addEventListener('click', function(e) {
    if (!e.target.closest('[onclick^="toggleDropdownEstado"]') && !e.target.closest('[id^="dropdown-estado-"]')) {
        document.querySelectorAll('[id^="dropdown-estado-"]').forEach(d => d.classList.add('hidden'));
    }
});

// Ver historial completo
async function verHistorial(equipoId, equipoNombre) {
    try {
        const response = await fetch(`/equipos/historial/${equipoId}`);
        const data = await response.json();
        
        if (!data.success) {
            alert('Error al cargar el historial: ' + data.message);
            return;
        }
        
        // Actualizar t√≠tulo del modal
        document.getElementById('historialEquipoNombre').textContent = equipoNombre;
        document.getElementById('historialEquipoCodigo').textContent = data.equipo.codigo;
        document.getElementById('historialEquipoEstado').textContent = data.equipo.estado;
        
        // Renderizar asignaciones
        const asignacionesHtml = data.asignaciones.length > 0 
            ? data.asignaciones.map(a => `
                <div class="border-l-4 ${a.estado === 'Activa' ? 'border-blue-500 bg-blue-50 dark:bg-blue-900/20' : 'border-gray-300 bg-gray-50 dark:bg-gray-700'} p-3 rounded">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <span class="font-semibold text-gray-900 dark:text-white">${a.asignadoA}</span>
                            <span class="ml-2 px-2 py-1 text-xs rounded ${a.tipoAsignado === 'Cliente' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300' : 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300'}">${a.tipoAsignado}</span>
                        </div>
                        <span class="px-2 py-1 text-xs rounded ${a.estado === 'Activa' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-300'}">${a.estado}</span>
                    </div>
                    <div class="text-xs text-gray-600 dark:text-gray-400">
                        <div>üìÖ Asignado: ${new Date(a.fecha).toLocaleString('es-NI')}</div>
                        ${a.fechaDevolucion ? `<div>‚Ü©Ô∏è Devuelto: ${new Date(a.fechaDevolucion).toLocaleString('es-NI')}</div>` : ''}
                        ${a.observaciones ? `<div class="mt-1">üí¨ ${a.observaciones}</div>` : ''}
                    </div>
                </div>
            `).join('')
            : '<p class="text-gray-500 dark:text-gray-400 text-sm italic">No hay asignaciones registradas</p>';
        
        document.getElementById('historialAsignaciones').innerHTML = asignacionesHtml;
        
        // Renderizar cambios de estado
        const estadosHtml = data.estados.length > 0
            ? data.estados.map(e => `
                <div class="border-l-4 border-indigo-500 bg-indigo-50 dark:bg-indigo-900/20 p-3 rounded">
                    <div class="flex justify-between items-start mb-2">
                        <div class="text-sm">
                            <span class="text-gray-600 dark:text-gray-400">${e.estadoAnterior}</span>
                            <svg class="w-4 h-4 inline mx-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                            <span class="font-semibold text-gray-900 dark:text-white">${e.estadoNuevo}</span>
                        </div>
                    </div>
                    <div class="text-xs text-gray-600 dark:text-gray-400">
                        <div>üìÖ ${new Date(e.fecha).toLocaleString('es-NI')}</div>
                        <div>üë§ ${e.usuario}</div>
                        ${e.motivo ? `<div class="mt-1">üí¨ ${e.motivo}</div>` : ''}
                    </div>
                </div>
            `).join('')
            : '<p class="text-gray-500 dark:text-gray-400 text-sm italic">No hay cambios de estado registrados</p>';
        
        document.getElementById('historialEstados').innerHTML = estadosHtml;
        
        // Renderizar mantenimientos
        const mantenimientosHtml = data.mantenimientos.length > 0
            ? data.mantenimientos.map(m => `
                <div class="border-l-4 border-yellow-500 bg-yellow-50 dark:bg-yellow-900/20 p-3 rounded">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <span class="font-semibold text-gray-900 dark:text-white">${m.tipoMantenimiento}</span>
                            <span class="ml-2 px-2 py-1 text-xs rounded ${m.estado === 'Completado' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'}">${m.estado}</span>
                        </div>
                        ${m.costo ? `<span class="text-sm font-semibold text-gray-900 dark:text-white">C$ ${m.costo.toFixed(2)}</span>` : ''}
                    </div>
                    <div class="text-xs text-gray-600 dark:text-gray-400">
                        <div>üìÖ Reportado: ${new Date(m.fecha).toLocaleString('es-NI')}</div>
                        ${m.fechaResolucion ? `<div>‚úÖ Resuelto: ${new Date(m.fechaResolucion).toLocaleString('es-NI')}</div>` : ''}
                        ${m.proveedor ? `<div>üë§ ${m.proveedor}</div>` : ''}
                        ${m.descripcion ? `<div class="mt-1">üí¨ ${m.descripcion}</div>` : ''}
                    </div>
                </div>
            `).join('')
            : '<p class="text-gray-500 dark:text-gray-400 text-sm italic">No hay mantenimientos registrados</p>';
        
        document.getElementById('historialMantenimientos').innerHTML = mantenimientosHtml;
        
        // Mostrar modal
        document.getElementById('modalHistorial').classList.remove('hidden');
        
    } catch (error) {
        alert('Error al cargar el historial: ' + error.message);
    }
}

