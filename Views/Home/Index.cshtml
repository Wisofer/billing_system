@model billing_system.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rolUsuario = Context.Session.GetString("RolUsuario") ?? "";
    var nombreUsuario = Context.Session.GetString("NombreUsuario") ?? "";
    var esAdministrador = rolUsuario == "Administrador";
}

<!-- Encabezado -->
<div class="mb-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-1">Bienvenido, @nombreUsuario</h2>
    <p class="text-gray-500 text-sm">Resumen de tu sistema de facturación</p>
</div>

<!-- Tarjetas de métricas -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <!-- Pagos Pendientes -->
    <div class="bg-white border border-gray-200 rounded-lg p-5 hover:border-blue-300 transition-colors">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-medium text-gray-600">Pagos Pendientes</h3>
            <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
        <p class="text-2xl font-semibold text-gray-900 mb-1">C$ @Model.PagosPendientes.ToString("N2")</p>
        <p class="text-xs text-gray-500">Facturas pendientes</p>
    </div>

    <!-- Pagos Realizados -->
    <div class="bg-white border border-gray-200 rounded-lg p-5 hover:border-green-300 transition-colors">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-medium text-gray-600">Pagos Realizados</h3>
            <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
        <p class="text-2xl font-semibold text-gray-900 mb-1">C$ @Model.PagosRealizados.ToString("N2")</p>
        <p class="text-xs text-gray-500">Total recibido</p>
    </div>

    <!-- Ingreso Total -->
    <div class="bg-white border border-gray-200 rounded-lg p-5 hover:border-purple-300 transition-colors">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-medium text-gray-600">Ingreso Total</h3>
            <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
        <p class="text-2xl font-semibold text-gray-900 mb-1">C$ @Model.IngresoTotal.ToString("N2")</p>
        <p class="text-xs text-gray-500">Ingresos totales</p>
    </div>

    <!-- Ingreso Faltante -->
    <div class="bg-white border border-gray-200 rounded-lg p-5 hover:border-amber-300 transition-colors">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-medium text-gray-600">Ingreso Faltante</h3>
            <div class="w-10 h-10 bg-amber-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
        </div>
        <p class="text-2xl font-semibold text-gray-900 mb-1">C$ @Model.IngresoFaltante.ToString("N2")</p>
        <p class="text-xs text-gray-500">Pendiente por recibir</p>
    </div>
</div>

<!-- Información del Sistema -->
<div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <div class="border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Información del Sistema
        </h2>
    </div>
    <div class="p-6 space-y-4">
        <div class="flex items-center py-2">
            <span class="text-sm text-gray-500 w-32">Usuario:</span>
            <span class="text-sm font-medium text-gray-900">@nombreUsuario</span>
        </div>
        <div class="flex items-center py-2">
            <span class="text-sm text-gray-500 w-32">Rol actual:</span>
            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium @(esAdministrador ? "bg-blue-50 text-blue-700" : "bg-gray-50 text-gray-700")">
                @rolUsuario
            </span>
        </div>
        <div class="border-t border-gray-100 pt-4 mt-4">
            @if (esAdministrador)
            {
                <div class="flex items-start bg-blue-50 border border-blue-100 rounded-lg p-4">
                    <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    <div>
                        <p class="text-sm font-medium text-blue-900">Privilegios de Administrador</p>
                        <p class="text-xs text-blue-700 mt-1">Acceso completo al sistema (CRUD en todas las áreas)</p>
                    </div>
                </div>
            }
            else
            {
                <div class="flex items-start bg-gray-50 border border-gray-200 rounded-lg p-4">
                    <svg class="w-5 h-5 text-gray-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div>
                        <p class="text-sm font-medium text-gray-900">Usuario Normal</p>
                        <p class="text-xs text-gray-600 mt-1">Acceso de lectura y gestión de facturas</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
