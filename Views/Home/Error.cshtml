@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusCode = ViewBag.StatusCode as int? ?? 500;
    var errorMessage = ViewBag.ErrorMessage as string ?? "Ha ocurrido un error";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full text-center">
        <div class="mb-8">
            <h1 class="text-9xl font-bold text-gray-300">@statusCode</h1>
        </div>
        
        <div class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">@errorMessage</h2>
            <p class="text-gray-600">
                @if (statusCode == 404)
                {
                    <span>La página que buscas no existe o ha sido movida.</span>
                }
                else if (statusCode == 403)
                {
                    <span>No tienes permisos para acceder a esta página.</span>
                }
                else
                {
                    <span>Algo salió mal. Por favor, intenta nuevamente más tarde.</span>
                }
            </p>
        </div>

        <div class="space-y-3">
            <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                Volver al Inicio
            </a>
            <div>
                <a href="javascript:history.back()" class="text-blue-600 hover:text-blue-700 text-sm">
                    ← Volver atrás
                </a>
            </div>
        </div>
    </div>
</div>

