@model billing_system.Models.Entities.Factura
@{
    ViewData["Title"] = "Editar Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clientes = ViewBag.Clientes as List<billing_system.Models.Entities.Cliente> ?? new List<billing_system.Models.Entities.Cliente>();
    var servicios = ViewBag.Servicios as List<billing_system.Models.Entities.Servicio> ?? new List<billing_system.Models.Entities.Servicio>();
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Editar Factura</h2>
        <p class="text-sm text-gray-500">Modifica los datos de la factura</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
        <form method="post" action="/facturas/editar/@Model.Id" class="space-y-6">
            <!-- Información de solo lectura -->
            <div class="bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-700 rounded-lg p-4 space-y-3">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Número de Factura</label>
                        <p class="text-sm font-medium text-gray-900">@Model.Numero</p>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Cliente</label>
                        <p class="text-sm text-gray-900">@Model.Cliente.Codigo - @Model.Cliente.Nombre</p>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Servicio</label>
                        <p class="text-sm text-gray-900">@Model.Servicio.Nombre</p>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Monto</label>
                        <p class="text-sm font-medium text-gray-900">C$ @Model.Monto.ToString("N2")</p>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Mes de Facturación</label>
                        <p class="text-sm text-gray-900">@Model.MesFacturacion.ToString("MMMM yyyy")</p>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Fecha de Creación</label>
                        <p class="text-sm text-gray-900">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>

            <!-- Campos editables -->
            <div class="space-y-4">
                <div>
                    <label for="Estado" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Estado *</label>
                    <select name="Estado" id="Estado" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="Pendiente" @(Model.Estado == "Pendiente" ? "selected" : "")>Pendiente</option>
                        <option value="Pagada" @(Model.Estado == "Pagada" ? "selected" : "")>Pagada</option>
                        <option value="Cancelada" @(Model.Estado == "Cancelada" ? "selected" : "")>Cancelada</option>
                    </select>
                    @if (ViewData.ModelState["Estado"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["Estado"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <div>
                    <label for="ArchivoPDF" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Ruta del Archivo PDF (opcional)</label>
                    <input type="text" name="ArchivoPDF" id="ArchivoPDF" value="@Model.ArchivoPDF" 
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                           placeholder="/ruta/al/archivo.pdf" />
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Ingresa la ruta del archivo PDF si está disponible</p>
                </div>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-sm text-blue-800">
                        <p class="font-medium mb-1">Nota:</p>
                        <p class="text-blue-700">Solo puedes editar el estado y la ruta del PDF. Los demás campos (cliente, servicio, monto) no se pueden modificar.</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                <a href="/facturas" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700">
                    Cancelar
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

