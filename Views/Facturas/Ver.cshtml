@model billing_system.Models.Entities.Factura
@{
    ViewData["Title"] = "Ver Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Detalles de Factura</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">Información completa de la factura</p>
        </div>
        <a href="/facturas" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700 dark:text-gray-300">
            Volver
        </a>
    </div>

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 space-y-6">
        <!-- Información de la Factura -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Número de Factura</label>
                <p class="text-lg font-semibold text-gray-900 dark:text-white">@Model.Numero</p>
            </div>
            <div>
                <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Estado</label>
                @if (Model.Estado == "Pagada")
                {
                    <span class="px-3 py-1 inline-flex text-sm font-medium rounded-md bg-green-50 dark:bg-green-900 text-green-700 dark:text-green-300">Pagada</span>
                }
                else if (Model.Estado == "Pendiente")
                {
                    <span class="px-3 py-1 inline-flex text-sm font-medium rounded-md bg-amber-50 dark:bg-amber-900 text-amber-700 dark:text-amber-300">Pendiente</span>
                }
                else
                {
                    <span class="px-3 py-1 inline-flex text-sm font-medium rounded-md bg-red-50 dark:bg-red-900 text-red-700 dark:text-red-300">Cancelada</span>
                }
            </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Información del Cliente</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Código</label>
                    <p class="text-sm text-gray-900 dark:text-white">@Model.Cliente.Codigo</p>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Nombre</label>
                    <p class="text-sm text-gray-900 dark:text-white">@Model.Cliente.Nombre</p>
                </div>
                @if (!string.IsNullOrEmpty(Model.Cliente.Telefono))
                {
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Teléfono</label>
                        <p class="text-sm text-gray-900 dark:text-white">@Model.Cliente.Telefono</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Cliente.Email))
                {
                    <div>
                        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Email</label>
                        <p class="text-sm text-gray-900 dark:text-white">@Model.Cliente.Email</p>
                    </div>
                }
            </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Detalles del Servicio</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Servicio</label>
                    <div class="flex items-center space-x-2">
                        <p class="text-sm text-gray-900 dark:text-white">@Model.Servicio.Nombre</p>
                        @if (Model.Servicio.Categoria == "Internet")
                        {
                            <span class="px-2 py-0.5 text-xs font-medium rounded-md bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-300">Internet</span>
                        }
                        else if (Model.Servicio.Categoria == "Streaming")
                        {
                            var clienteServicio = Model.Cliente?.ClienteServicios?.FirstOrDefault(cs => cs.ServicioId == Model.ServicioId && cs.Activo);
                            var cantidad = clienteServicio?.Cantidad ?? 1;
                            <span class="px-2 py-0.5 text-xs font-medium rounded-md bg-purple-50 dark:bg-purple-900 text-purple-700 dark:text-purple-300">Streaming</span>
                            @if (cantidad > 1)
                            {
                                <span class="px-2 py-0.5 text-xs font-medium rounded-md bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">(@cantidad suscripciones)</span>
                            }
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Servicio.Descripcion))
                    {
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 italic">@Model.Servicio.Descripcion</p>
                    }
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Monto</label>
                    <p class="text-lg font-semibold text-gray-900 dark:text-white">C$ @Model.Monto.ToString("N2")</p>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Mes de Facturación</label>
                    <p class="text-sm text-gray-900 dark:text-white">@Model.MesFacturacion.ToString("MMMM yyyy")</p>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Fecha de Creación</label>
                    <p class="text-sm text-gray-900 dark:text-white">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
            <div class="flex items-center justify-between">
                <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Documento PDF</label>
                <a href="/facturas/descargar-pdf/@Model.Id" class="inline-flex items-center space-x-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    <span>Descargar PDF</span>
                </a>
            </div>
        </div>
    </div>
</div>

