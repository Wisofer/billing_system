@{
    var esAdministrador = ViewBag.EsAdministrador as bool? ?? false;
}

<div class="mb-6 flex items-center justify-between">
    <div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-1">Gestión de Facturas</h2>
        <p class="text-sm text-gray-500">Administra las facturas del sistema</p>
    </div>
    <div class="flex space-x-2">
        <a href="/facturas/crear" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors text-sm font-medium flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Nueva Factura</span>
        </a>
        @if (esAdministrador)
        {
            <form method="post" action="/facturas/generar-automaticas" class="inline">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    <span>Generar Automático</span>
                </button>
            </form>
        }
    </div>
</div>

