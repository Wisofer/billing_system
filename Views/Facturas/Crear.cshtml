@model billing_system.Models.Entities.Factura
@{
    ViewData["Title"] = "Crear Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clientes = ViewBag.Clientes as List<billing_system.Models.Entities.Cliente> ?? new List<billing_system.Models.Entities.Cliente>();
    var servicios = ViewBag.Servicios as List<billing_system.Models.Entities.Servicio> ?? new List<billing_system.Models.Entities.Servicio>();
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Crear Nueva Factura</h2>
        <p class="text-sm text-gray-500">Completa los datos para generar una nueva factura</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
        <form method="post" action="/facturas/crear" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="ClienteId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cliente *</label>
                    <select name="ClienteId" id="ClienteId" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Seleccionar cliente...</option>
                        @foreach (var cliente in clientes)
                        {
                            <option value="@cliente.Id">@cliente.Codigo - @cliente.Nombre</option>
                        }
                    </select>
                    @if (ViewData.ModelState["ClienteId"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["ClienteId"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <div>
                    <label for="ServicioId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Servicio *</label>
                    <select name="ServicioId" id="servicioSelect" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Seleccionar servicio...</option>
                        @foreach (var servicio in servicios)
                        {
                            <option value="@servicio.Id" data-precio="@servicio.Precio">@servicio.Nombre - C$ @servicio.Precio.ToString("N2")</option>
                        }
                    </select>
                    @if (ViewData.ModelState["ServicioId"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["ServicioId"].Errors[0].ErrorMessage</span>
                    }
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="MesFacturacion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Mes de Facturación *</label>
                    <input type="month" name="MesFacturacion" id="MesFacturacion" required 
                           value="@DateTime.Now.ToString("yyyy-MM")"
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    @if (ViewData.ModelState["MesFacturacion"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["MesFacturacion"].Errors[0].ErrorMessage</span>
                    }
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Selecciona el mes al que corresponde esta factura</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Monto</label>
                    <input type="text" id="montoDisplay" readonly 
                           value="C$ 0.00"
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-600 dark:text-gray-300 cursor-not-allowed" />
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Se actualiza automáticamente según el servicio seleccionado</p>
                </div>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-sm text-blue-800">
                        <p class="font-medium mb-1">Información importante:</p>
                        <ul class="list-disc list-inside space-y-1 text-blue-700">
                            <li>El número de factura se generará automáticamente</li>
                            <li>El monto se calculará según el precio del servicio seleccionado</li>
                            <li>La factura se creará con estado "Pendiente"</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                <a href="/facturas" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700">
                    Cancelar
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Crear Factura
                </button>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const clienteSelect = document.getElementById('ClienteId');
    const servicioSelect = document.getElementById('servicioSelect');
    const montoDisplay = document.getElementById('montoDisplay');
    
    // Cuando se selecciona un cliente, cargar su último servicio
    clienteSelect.addEventListener('change', async function() {
        const clienteId = clienteSelect.value;
        
        if (clienteId) {
            try {
                const response = await fetch(`/facturas/obtener-servicio-cliente/${clienteId}`);
                const data = await response.json();
                
                if (data.servicioId) {
                    // Pre-seleccionar el servicio del cliente
                    servicioSelect.value = data.servicioId;
                    
                    // Actualizar el monto automáticamente
                    const selectedOption = servicioSelect.options[servicioSelect.selectedIndex];
                    const precio = selectedOption.getAttribute('data-precio');
                    
                    if (precio) {
                        montoDisplay.value = 'C$ ' + parseFloat(precio).toLocaleString('es-NI', {
                            minimumFractionDigits: 2,
                            maximumFractionDigits: 2
                        });
                    }
                }
            } catch (error) {
                console.error('Error al obtener servicio del cliente:', error);
            }
        }
    });
    
    // Actualizar monto cuando se cambia el servicio
    servicioSelect.addEventListener('change', function() {
        const selectedOption = servicioSelect.options[servicioSelect.selectedIndex];
        const precio = selectedOption.getAttribute('data-precio');
        
        if (precio) {
            montoDisplay.value = 'C$ ' + parseFloat(precio).toLocaleString('es-NI', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });
        } else {
            montoDisplay.value = 'C$ 0.00';
        }
    });
});
</script>

