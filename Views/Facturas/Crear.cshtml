@model billing_system.Models.Entities.Factura
@using System.Text.Json
@{
    ViewData["Title"] = "Crear Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clientes = ViewBag.Clientes as List<billing_system.Models.Entities.Cliente> ?? new List<billing_system.Models.Entities.Cliente>();
    var servicios = ViewBag.Servicios as List<billing_system.Models.Entities.Servicio> ?? new List<billing_system.Models.Entities.Servicio>();
    var serviciosJson = JsonSerializer.Serialize(servicios.Select(s => new { id = s.Id, nombre = s.Nombre, precio = s.Precio, categoria = s.Categoria }));
    var clientesJson = JsonSerializer.Serialize(clientes.Select(c => new { id = c.Id, codigo = c.Codigo, nombre = c.Nombre }));
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Crear Nueva Factura</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Completa los datos para generar una nueva factura</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="mb-4 bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-300 px-4 py-3 rounded-lg flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
        <form method="post" action="/facturas/crear" class="space-y-6">
            @Html.AntiForgeryToken()
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative">
                    <label for="clienteSearch" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cliente *</label>
                    <div class="relative">
                        <input type="text" 
                               id="clienteSearch" 
                               autocomplete="off"
                               placeholder="Buscar cliente por código o nombre..."
                               class="w-full px-4 py-2 pl-10 pr-10 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                        <button type="button" id="clearClienteBtn" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 hidden">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <input type="hidden" name="ClienteId" id="ClienteId" required />
                    <div id="clienteDropdown" class="absolute z-50 w-full mt-1 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg shadow-lg max-h-60 overflow-y-auto hidden">
                        <div id="clienteDropdownContent" class="py-1">
                            <!-- Los resultados se cargarán aquí dinámicamente -->
                        </div>
                    </div>
                    @if (ViewData.ModelState["ClienteId"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["ClienteId"].Errors[0].ErrorMessage</span>
                    }
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Escribe para buscar cliente por código o nombre</p>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Servicios *</label>
                    <div id="serviciosContainer" class="border border-gray-300 dark:border-gray-600 rounded-lg p-3 max-h-48 overflow-y-auto dark:bg-gray-700" style="min-height: 100px;">
                        <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4" id="servicioHelp">Primero seleccione un cliente para ver sus servicios</p>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Selecciona uno o más servicios para facturar</p>
                    @if (ViewData.ModelState["ServicioIds"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["ServicioIds"].Errors[0].ErrorMessage</span>
                    }
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="MesFacturacion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Mes de Facturación *</label>
                    <input type="month" name="MesFacturacion" id="MesFacturacion" required 
                           value="@DateTime.Now.ToString("yyyy-MM")"
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    @if (ViewData.ModelState["MesFacturacion"]?.Errors.Count > 0)
                    {
                        <span class="text-red-500 text-xs">@ViewData.ModelState["MesFacturacion"].Errors[0].ErrorMessage</span>
                    }
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Selecciona el mes al que corresponde esta factura</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Monto Total</label>
                    <input type="text" id="montoDisplay" readonly 
                           value="C$ 0.00"
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-600 dark:text-gray-300 cursor-not-allowed" />
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Suma de los servicios seleccionados</p>
                </div>
            </div>

            <div class="bg-blue-50 dark:bg-blue-900 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
                <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-sm text-blue-800 dark:text-blue-300">
                        <p class="font-medium mb-1">Información importante:</p>
                        <ul class="list-disc list-inside space-y-1 text-blue-700 dark:text-blue-400">
                            <li>El número de factura se generará automáticamente</li>
                            <li>Se creará una factura por cada servicio seleccionado</li>
                            <li>El monto se calculará según el precio de cada servicio</li>
                            <li>Las facturas se crearán con estado "Pendiente"</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                <a href="/facturas" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 dark:bg-gray-700 transition-colors text-sm font-medium text-gray-700 dark:text-gray-300">
                    Cancelar
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Crear Factura
                </button>
            </div>
        </form>
    </div>
</div>

<script>
(function() {
    'use strict';
    
    const clienteSearch = document.getElementById('clienteSearch');
    const clienteIdHidden = document.getElementById('ClienteId');
    const clienteDropdown = document.getElementById('clienteDropdown');
    const clienteDropdownContent = document.getElementById('clienteDropdownContent');
    const clearClienteBtn = document.getElementById('clearClienteBtn');
    const serviciosContainer = document.getElementById('serviciosContainer');
    const montoDisplay = document.getElementById('montoDisplay');
    const servicioHelp = document.getElementById('servicioHelp');
    
    if (!clienteSearch || !clienteIdHidden || !serviciosContainer) {
        console.error('Elementos del formulario no encontrados');
        return;
    }
    
    // Todos los clientes disponibles
    const todosLosClientes = @Html.Raw(clientesJson);
    let clienteSeleccionado = null;
    let selectedIndex = -1;
    
    // Todos los servicios disponibles
    const todosLosServicios = @Html.Raw(serviciosJson);
    
    // Función para filtrar clientes
    function filtrarClientes(termino) {
        if (!termino || termino.trim() === '') {
            return todosLosClientes;
        }
        
        const terminoLower = termino.toLowerCase().trim();
        return todosLosClientes.filter(cliente => {
            const codigo = (cliente.codigo || '').toLowerCase();
            const nombre = (cliente.nombre || '').toLowerCase();
            return codigo.includes(terminoLower) || nombre.includes(terminoLower);
        });
    }
    
    // Función para mostrar resultados en el dropdown
    function mostrarResultados(clientesFiltrados) {
        clienteDropdownContent.innerHTML = '';
        
        if (clientesFiltrados.length === 0) {
            const noResults = document.createElement('div');
            noResults.className = 'px-4 py-3 text-sm text-gray-500 dark:text-gray-400 text-center';
            noResults.textContent = 'No se encontraron clientes';
            clienteDropdownContent.appendChild(noResults);
            clienteDropdown.classList.remove('hidden');
            return;
        }
        
        clientesFiltrados.forEach((cliente, index) => {
            const item = document.createElement('div');
            item.className = 'px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer transition-colors cliente-item';
            item.dataset.clienteId = cliente.id;
            item.dataset.index = index;
            
            const codigo = document.createElement('span');
            codigo.className = 'font-medium text-gray-900 dark:text-white';
            codigo.textContent = cliente.codigo + ' - ';
            
            const nombre = document.createElement('span');
            nombre.className = 'text-gray-700 dark:text-gray-300';
            nombre.textContent = cliente.nombre;
            
            item.appendChild(codigo);
            item.appendChild(nombre);
            
            item.addEventListener('click', function() {
                seleccionarCliente(cliente);
            });
            
            item.addEventListener('mouseenter', function() {
                // Remover highlight de otros items
                clienteDropdownContent.querySelectorAll('.cliente-item').forEach(el => {
                    el.classList.remove('bg-blue-50', 'dark:bg-blue-900');
                });
                // Agregar highlight al item actual
                this.classList.add('bg-blue-50', 'dark:bg-blue-900');
                selectedIndex = parseInt(this.dataset.index);
            });
            
            clienteDropdownContent.appendChild(item);
        });
        
        clienteDropdown.classList.remove('hidden');
        selectedIndex = -1;
    }
    
    // Función para seleccionar un cliente
    function seleccionarCliente(cliente) {
        clienteSeleccionado = cliente;
        clienteIdHidden.value = cliente.id;
        clienteSearch.value = cliente.codigo + ' - ' + cliente.nombre;
        clienteDropdown.classList.add('hidden');
        clearClienteBtn.classList.remove('hidden');
        
        // Cargar servicios del cliente
        cargarServiciosDelCliente(cliente.id);
    }
    
    // Función para limpiar selección
    function limpiarSeleccion() {
        clienteSeleccionado = null;
        clienteIdHidden.value = '';
        clienteSearch.value = '';
        clienteDropdown.classList.add('hidden');
        clearClienteBtn.classList.add('hidden');
        serviciosContainer.innerHTML = '<p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4" id="servicioHelp">Primero seleccione un cliente para ver sus servicios</p>';
        servicioHelp.textContent = 'Primero seleccione un cliente para ver sus servicios';
        montoDisplay.value = 'C$ 0.00';
        clienteSearch.focus();
    }
    
    // Event listeners para el buscador
    clienteSearch.addEventListener('input', function() {
        const termino = this.value;
                    
        // Si hay un cliente seleccionado y el usuario está editando, limpiar selección
        if (clienteSeleccionado && termino !== (clienteSeleccionado.codigo + ' - ' + clienteSeleccionado.nombre)) {
            clienteIdHidden.value = '';
            clienteSeleccionado = null;
            clearClienteBtn.classList.add('hidden');
        }
        
        if (termino.trim() === '') {
            clienteDropdown.classList.add('hidden');
            return;
        }
        
        const clientesFiltrados = filtrarClientes(termino);
        mostrarResultados(clientesFiltrados);
    });
    
    clienteSearch.addEventListener('focus', function() {
        if (this.value.trim() !== '' && !clienteSeleccionado) {
            const clientesFiltrados = filtrarClientes(this.value);
            mostrarResultados(clientesFiltrados);
        }
    });
    
    clienteSearch.addEventListener('keydown', function(e) {
        const items = clienteDropdownContent.querySelectorAll('.cliente-item');
        
        if (items.length === 0) return;
        
        if (e.key === 'ArrowDown') {
            e.preventDefault();
            selectedIndex = (selectedIndex + 1) % items.length;
            items[selectedIndex].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
            items[selectedIndex].classList.add('bg-blue-50', 'dark:bg-blue-900');
            // Remover highlight de otros items
            items.forEach((item, idx) => {
                if (idx !== selectedIndex) {
                    item.classList.remove('bg-blue-50', 'dark:bg-blue-900');
                }
            });
        } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            selectedIndex = selectedIndex <= 0 ? items.length - 1 : selectedIndex - 1;
            items[selectedIndex].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
            items[selectedIndex].classList.add('bg-blue-50', 'dark:bg-blue-900');
            // Remover highlight de otros items
            items.forEach((item, idx) => {
                if (idx !== selectedIndex) {
                    item.classList.remove('bg-blue-50', 'dark:bg-blue-900');
                }
            });
        } else if (e.key === 'Enter') {
            e.preventDefault();
            if (selectedIndex >= 0 && items[selectedIndex]) {
                const clienteId = items[selectedIndex].dataset.clienteId;
                const cliente = todosLosClientes.find(c => c.id == clienteId);
                if (cliente) {
                    seleccionarCliente(cliente);
                }
            }
        } else if (e.key === 'Escape') {
            clienteDropdown.classList.add('hidden');
        }
    });
    
    clearClienteBtn.addEventListener('click', function(e) {
        e.preventDefault();
        limpiarSeleccion();
    });
    
    // Cerrar dropdown al hacer click fuera
    document.addEventListener('click', function(e) {
        if (!clienteSearch.contains(e.target) && !clienteDropdown.contains(e.target)) {
            clienteDropdown.classList.add('hidden');
        }
    });
    
    function actualizarMontoTotal() {
        const checkboxes = serviciosContainer.querySelectorAll('input[type="checkbox"]:checked');
        let total = 0;
        checkboxes.forEach(function(checkbox) {
            const precio = parseFloat(checkbox.getAttribute('data-precio') || 0);
            total += precio;
        });
        montoDisplay.value = 'C$ ' + total.toLocaleString('es-NI', {
                            minimumFractionDigits: 2,
                            maximumFractionDigits: 2
                        });
                    }
    
    function cargarServiciosEnCheckboxes(serviciosArray, seleccionarTodos = true) {
        serviciosContainer.innerHTML = '';
        
        if (serviciosArray && serviciosArray.length > 0) {
            serviciosArray.forEach(function(servicio) {
                const div = document.createElement('div');
                div.className = 'flex items-center space-x-2 py-2';
                
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                checkbox.name = 'ServicioIds';
                checkbox.value = servicio.id;
                checkbox.id = 'servicio_' + servicio.id;
                checkbox.className = 'w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700';
                // Calcular precio total considerando cantidad (solo para Streaming)
                const cantidad = servicio.cantidad || 1;
                const precioUnitario = parseFloat(servicio.precio);
                const precioTotal = servicio.categoria === 'Streaming' ? precioUnitario * cantidad : precioUnitario;
                
                checkbox.setAttribute('data-precio', precioTotal);
                checkbox.setAttribute('data-precio-unitario', precioUnitario);
                checkbox.setAttribute('data-cantidad', cantidad);
                checkbox.setAttribute('data-categoria', servicio.categoria);
                checkbox.checked = seleccionarTodos; // Marcar todos por defecto
                checkbox.addEventListener('change', actualizarMontoTotal);
                
                const label = document.createElement('label');
                label.htmlFor = 'servicio_' + servicio.id;
                label.className = 'text-sm text-gray-700 dark:text-gray-300 cursor-pointer flex items-center space-x-2';
                
                // Crear badge de categoría
                const categoriaBadge = document.createElement('span');
                if (servicio.categoria === 'Internet') {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-300';
                    categoriaBadge.textContent = 'Internet';
                } else if (servicio.categoria === 'Streaming') {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-purple-50 dark:bg-purple-900 text-purple-700 dark:text-purple-300';
                    categoriaBadge.textContent = 'Streaming';
                } else {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300';
                    categoriaBadge.textContent = servicio.categoria || 'N/A';
                }
                
                // Mostrar nombre con cantidad si es Streaming y cantidad > 1
                let nombreTexto;
        
                if (servicio.categoria === 'Streaming' && cantidad > 1) {
                    nombreTexto = document.createTextNode(servicio.nombre + ' (' + cantidad + ' suscripciones) - C$ ' + precioTotal.toLocaleString('es-NI', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    }));
                } else {
                    nombreTexto = document.createTextNode(servicio.nombre + ' - C$ ' + precioTotal.toLocaleString('es-NI', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
                    }));
                }
                
                label.appendChild(nombreTexto);
                label.appendChild(categoriaBadge);
                
                div.appendChild(checkbox);
                div.appendChild(label);
                serviciosContainer.appendChild(div);
            });
            
            // Actualizar el monto total después de cargar todos los checkboxes
            setTimeout(actualizarMontoTotal, 100);
            
            servicioHelp.textContent = 'Servicios del cliente (ya seleccionados). Puedes desmarcar los que no quieras facturar.';
        } else {
            todosLosServicios.forEach(function(servicio) {
                const div = document.createElement('div');
                div.className = 'flex items-center space-x-2 py-2';
                
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                checkbox.name = 'ServicioIds';
                checkbox.value = servicio.id;
                checkbox.id = 'servicio_' + servicio.id;
                checkbox.className = 'w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700';
                checkbox.setAttribute('data-precio', servicio.precio);
                checkbox.addEventListener('change', actualizarMontoTotal);
                
                const label = document.createElement('label');
                label.htmlFor = 'servicio_' + servicio.id;
                label.className = 'text-sm text-gray-700 dark:text-gray-300 cursor-pointer flex items-center space-x-2';
                const precio = parseFloat(servicio.precio);
                
                // Crear badge de categoría
                const categoriaBadge = document.createElement('span');
                if (servicio.categoria === 'Internet') {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-300';
                    categoriaBadge.textContent = 'Internet';
                } else if (servicio.categoria === 'Streaming') {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-purple-50 dark:bg-purple-900 text-purple-700 dark:text-purple-300';
                    categoriaBadge.textContent = 'Streaming';
                } else {
                    categoriaBadge.className = 'px-2 py-0.5 text-xs font-medium rounded-md bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300';
                    categoriaBadge.textContent = servicio.categoria || 'N/A';
                }
                
                const nombreTexto = document.createTextNode(servicio.nombre + ' - C$ ' + precio.toLocaleString('es-NI', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                }));
                
                label.appendChild(nombreTexto);
                label.appendChild(categoriaBadge);
                
                div.appendChild(checkbox);
                div.appendChild(label);
                serviciosContainer.appendChild(div);
            });
            servicioHelp.textContent = 'El cliente no tiene servicios activos. Puede seleccionar cualquier servicio.';
        }
    }
    
    async function cargarServiciosDelCliente(clienteId) {
        if (!clienteId) {
            serviciosContainer.innerHTML = '<p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">Primero seleccione un cliente</p>';
            servicioHelp.textContent = 'Los servicios se mostrarán al seleccionar un cliente';
            montoDisplay.value = 'C$ 0.00';
            return;
        }
        
        serviciosContainer.innerHTML = '<p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">Cargando servicios...</p>';
        servicioHelp.textContent = 'Cargando servicios del cliente...';
        montoDisplay.value = 'C$ 0.00';
        
        try {
            const response = await fetch('/facturas/obtener-servicio-cliente/' + clienteId);
            if (!response.ok) {
                throw new Error('Error al obtener servicios');
            }
            
            const data = await response.json();
            console.log('Servicios activos del cliente:', data.serviciosActivos);
            
            if (data.serviciosActivos && data.serviciosActivos.length > 0) {
                // Cargar servicios activos del cliente, todos seleccionados por defecto
                cargarServiciosEnCheckboxes(data.serviciosActivos, true);
            } else {
                // Si no tiene servicios activos, mostrar todos pero sin seleccionar
                cargarServiciosEnCheckboxes(todosLosServicios, false);
            }
        } catch (error) {
            console.error('Error:', error);
            serviciosContainer.innerHTML = '<p class="text-sm text-red-500 text-center py-4">Error al cargar servicios: ' + error.message + '</p>';
            servicioHelp.textContent = 'Error al cargar servicios';
        }
    }
    
    // Validación del formulario
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            if (!clienteIdHidden.value) {
                e.preventDefault();
                clienteSearch.focus();
                clienteSearch.classList.add('border-red-500', 'ring-2', 'ring-red-500');
                setTimeout(() => {
                    clienteSearch.classList.remove('border-red-500', 'ring-2', 'ring-red-500');
                }, 3000);
                return false;
            }
        });
    }
})();
</script>
