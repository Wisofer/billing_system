                <option>Todos los meses</option>
                <option>Enero 2024</option>
                <option>Febrero 2024</option>
                <option>Marzo 2024</option>
            </select>
        </div>
        <div>
            <label class="block text-xs font-medium text-gray-500 mb-2">Estado</label>
            <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option>Todos los estados</option>
