@model List<billing_system.Models.Entities.Factura>
@{
    ViewData["Title"] = "Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

@await Html.PartialAsync("_Header")
@await Html.PartialAsync("_Estadisticas")
@await Html.PartialAsync("_Filtros")
@await Html.PartialAsync("_TablaFacturas", Model)
@await Html.PartialAsync("_Notificaciones")

<!-- Loader para descarga masiva de PDFs -->
<div id="loaderDescargarPdfs" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl p-8 max-w-md w-full mx-4">
        <div class="flex flex-col items-center space-y-4">
            <div class="text-center w-full">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Descargando Facturas</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                    Descargando todas las facturas en PDF...
                </p>
                
                <div class="w-full">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoDescargaTexto">0 / 0</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoDescargaPorcentaje">0%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
                        <div id="barraProgresoDescarga" class="bg-purple-600 h-3 rounded-full transition-all duration-300 ease-out" style="width: 0%">
                            <div class="h-full bg-purple-400 animate-pulse"></div>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 text-center" id="mensajeDescarga">
                        Iniciando descarga...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnDescargarTodasPdf = document.getElementById('btnDescargarTodasPdf');
    if (btnDescargarTodasPdf) {
        btnDescargarTodasPdf.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Deshabilitar el botón
            btnDescargarTodasPdf.disabled = true;
            btnDescargarTodasPdf.classList.add('opacity-50', 'cursor-not-allowed');
            
            // Mostrar loader
            const loaderDescargarPdfs = document.getElementById('loaderDescargarPdfs');
            const barraProgresoDescarga = document.getElementById('barraProgresoDescarga');
            const progresoDescargaTexto = document.getElementById('progresoDescargaTexto');
            const progresoDescargaPorcentaje = document.getElementById('progresoDescargaPorcentaje');
            const mensajeDescarga = document.getElementById('mensajeDescarga');
            
            if (loaderDescargarPdfs) {
                loaderDescargarPdfs.classList.remove('hidden');
            }
            
            // Obtener parámetros de la URL actual
            const urlParams = new URLSearchParams(window.location.search);
            const params = new URLSearchParams();
            
            // Copiar solo los parámetros relevantes
            if (urlParams.has('estado') && urlParams.get('estado') !== 'Todos') {
                params.append('estado', urlParams.get('estado'));
            }
            if (urlParams.has('mes')) {
                params.append('mes', urlParams.get('mes'));
            }
            if (urlParams.has('año')) {
                params.append('año', urlParams.get('año'));
            }
            if (urlParams.has('busquedaCliente')) {
                params.append('busquedaCliente', urlParams.get('busquedaCliente'));
            }
            
            // Obtener IDs de facturas
            fetch('/facturas/obtener-ids-facturas?' + params.toString(), {
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        // Si la respuesta no es OK, intentar leer como texto para ver el error
                        return response.text().then(text => {
                            throw new Error(`Error del servidor: ${response.status} - ${text.substring(0, 100)}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.error) {
                        throw new Error(data.error);
                    }
                    
                    // Eliminar duplicados por si acaso
                    const facturasIds = [...new Set(data.ids || [])];
                    const total = facturasIds.length;
                    
                    console.log('Facturas a descargar (sin duplicados):', facturasIds);
                    console.log('Total:', total);
                    
                    if (total === 0) {
                        alert('No hay facturas para descargar con los filtros aplicados.');
                        if (loaderDescargarPdfs) {
                            loaderDescargarPdfs.classList.add('hidden');
                        }
                        btnDescargarTodasPdf.disabled = false;
                        btnDescargarTodasPdf.classList.remove('opacity-50', 'cursor-not-allowed');
                        return;
                    }
                    
                    // Descargar cada PDF individualmente con delay
                    let descargadas = 0;
                    const delayEntreDescargas = 1000; // 1 segundo entre cada descarga para evitar bloqueos
                    
                    function descargarSiguiente(index) {
                        if (index >= facturasIds.length) {
                            // Todas descargadas
                            if (mensajeDescarga) {
                                mensajeDescarga.textContent = `¡Todas las ${total} facturas descargadas exitosamente!`;
                            }
                            setTimeout(() => {
                                if (loaderDescargarPdfs) {
                                    loaderDescargarPdfs.classList.add('hidden');
                                }
                                btnDescargarTodasPdf.disabled = false;
                                btnDescargarTodasPdf.classList.remove('opacity-50', 'cursor-not-allowed');
                            }, 2000);
                            return;
                        }
                        
                        const facturaId = facturasIds[index];
                        const url = `/facturas/descargar-pdf/${facturaId}`;
                        
                        console.log(`Descargando factura ${index + 1}/${total} - ID: ${facturaId}`);
                        
                        // Actualizar progreso antes de descargar
                        descargadas++;
                        const porcentaje = Math.round((descargadas / total) * 100);
                        if (barraProgresoDescarga) {
                            barraProgresoDescarga.style.width = porcentaje + '%';
                        }
                        if (progresoDescargaTexto) {
                            progresoDescargaTexto.textContent = `${descargadas} / ${total}`;
                        }
                        if (progresoDescargaPorcentaje) {
                            progresoDescargaPorcentaje.textContent = porcentaje + '%';
                        }
                        if (mensajeDescarga) {
                            mensajeDescarga.textContent = `Descargando factura ${descargadas} de ${total}...`;
                        }
                        
                        // Usar solo un método: iframe para descarga automática
                        const iframe = document.createElement('iframe');
                        iframe.style.display = 'none';
                        iframe.style.width = '0';
                        iframe.style.height = '0';
                        iframe.style.position = 'absolute';
                        iframe.style.left = '-9999px';
                        iframe.style.top = '-9999px';
                        iframe.src = url;
                        document.body.appendChild(iframe);
                        
                        // Limpiar el iframe después de un tiempo
                        setTimeout(() => {
                            try {
                                if (iframe.parentNode) {
                                    document.body.removeChild(iframe);
                                }
                            } catch (e) {
                                // Ignorar errores
                            }
                        }, 2000);
                        
                        // Descargar la siguiente después del delay
                        setTimeout(() => {
                            descargarSiguiente(index + 1);
                        }, delayEntreDescargas);
                    }
                    
                    // Iniciar descargas
                    console.log(`Iniciando descarga de ${total} facturas (Internet y Streaming)...`);
                    descargarSiguiente(0);
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al descargar facturas: ' + error.message);
                    if (loaderDescargarPdfs) {
                        loaderDescargarPdfs.classList.add('hidden');
                    }
                    btnDescargarTodasPdf.disabled = false;
                    btnDescargarTodasPdf.classList.remove('opacity-50', 'cursor-not-allowed');
                });
        });
    }
});
</script>

<!-- Loader para generación automática -->
<div id="loaderGenerarFacturas" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl p-8 max-w-md w-full mx-4">
        <div class="flex flex-col items-center space-y-4">
            <!-- Mensaje -->
            <div class="text-center w-full">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Generando Facturas</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                    Estamos generando las facturas de todos sus clientes activos...
                </p>
                
                <!-- Barra de progreso -->
                <div class="w-full">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoTexto">0 / 0</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoPorcentaje">0%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
                        <div id="barraProgreso" class="bg-blue-600 h-3 rounded-full transition-all duration-300 ease-out" style="width: 0%">
                            <div class="h-full bg-blue-400 animate-pulse"></div>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 text-center" id="mensajeProgreso">
                        Iniciando generación...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const formGenerarAutomaticas = document.getElementById('formGenerarAutomaticas');
    const btnGenerarAutomaticas = document.getElementById('btnGenerarAutomaticas');
    const loaderGenerarFacturas = document.getElementById('loaderGenerarFacturas');
    const barraProgreso = document.getElementById('barraProgreso');
    const progresoTexto = document.getElementById('progresoPorcentaje');
    const progresoContador = document.getElementById('progresoTexto');
    const mensajeProgreso = document.getElementById('mensajeProgreso');
    
    if (formGenerarAutomaticas && btnGenerarAutomaticas) {
        formGenerarAutomaticas.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Deshabilitar el botón
            btnGenerarAutomaticas.disabled = true;
            btnGenerarAutomaticas.classList.add('opacity-50', 'cursor-not-allowed');
            
            // Cambiar el contenido del botón
            const contenidoOriginal = btnGenerarAutomaticas.innerHTML;
            btnGenerarAutomaticas.innerHTML = `
                <svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>Generando...</span>
            `;
            
            // Mostrar el loader
            if (loaderGenerarFacturas) {
                loaderGenerarFacturas.classList.remove('hidden');
            }
            
            // Inicializar la barra de progreso
            let progreso = 0;
            let totalClientes = 0;
            
            // Primero obtener el número de clientes que se van a procesar
            fetch('/facturas/contar-clientes-generar', {
                method: 'GET'
            })
            .then(response => response.json())
            .then(data => {
                totalClientes = data.total || 1;
                actualizarProgreso(0, totalClientes);
                
                // Crear FormData con el token anti-forgery
                const formData = new FormData(formGenerarAutomaticas);
                
                // Simular progreso mientras se procesa
                const intervalo = setInterval(() => {
                    if (progreso < 90) {
                        progreso += Math.random() * 5;
                        if (progreso > 90) progreso = 90;
                        actualizarProgreso(Math.floor(progreso), totalClientes);
                    }
                }, 200);
                
                // Enviar la petición
                fetch('/facturas/generar-automaticas', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    clearInterval(intervalo);
                    progreso = 100;
                    actualizarProgreso(totalClientes, totalClientes);
                    mensajeProgreso.textContent = '¡Facturas generadas exitosamente!';
                    
                    setTimeout(() => {
                        if (response.ok || response.redirected) {
                            // Ocultar el loader
                            if (loaderGenerarFacturas) {
                                loaderGenerarFacturas.classList.add('hidden');
                            }
                            // Redirigir a la página de facturas
                            window.location.href = '/facturas';
                        } else {
                            throw new Error('Error al generar facturas');
                        }
                    }, 500);
                })
                .catch(error => {
                    clearInterval(intervalo);
                    console.error('Error:', error);
                    // Ocultar el loader
                    if (loaderGenerarFacturas) {
                        loaderGenerarFacturas.classList.add('hidden');
                    }
                    // Restaurar el botón
                    btnGenerarAutomaticas.disabled = false;
                    btnGenerarAutomaticas.classList.remove('opacity-50', 'cursor-not-allowed');
                    btnGenerarAutomaticas.innerHTML = contenidoOriginal;
                    alert('Error al generar las facturas. Por favor, intenta de nuevo.');
                });
            })
            .catch(error => {
                console.error('Error al obtener total de clientes:', error);
                // Si falla, usar un valor por defecto
                totalClientes = 1;
                actualizarProgreso(0, totalClientes);
                
                // Continuar con la generación
                const formData = new FormData(formGenerarAutomaticas);
                fetch('/facturas/generar-automaticas', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok || response.redirected) {
                        progreso = 100;
                        actualizarProgreso(totalClientes, totalClientes);
                        setTimeout(() => {
                            if (loaderGenerarFacturas) {
                                loaderGenerarFacturas.classList.add('hidden');
                            }
                            window.location.href = '/facturas';
                        }, 500);
                    } else {
                        throw new Error('Error al generar facturas');
                    }
                })
                .catch(err => {
                    if (loaderGenerarFacturas) {
                        loaderGenerarFacturas.classList.add('hidden');
                    }
                    btnGenerarAutomaticas.disabled = false;
                    btnGenerarAutomaticas.classList.remove('opacity-50', 'cursor-not-allowed');
                    btnGenerarAutomaticas.innerHTML = contenidoOriginal;
                    alert('Error al generar las facturas. Por favor, intenta de nuevo.');
                });
            });
            
            function actualizarProgreso(actual, total) {
                const porcentaje = total > 0 ? Math.min(100, Math.round((actual / total) * 100)) : 0;
                if (barraProgreso) {
                    barraProgreso.style.width = porcentaje + '%';
                }
                if (progresoTexto) {
                    progresoTexto.textContent = `${actual} / ${total}`;
                }
                if (progresoContador) {
                    progresoContador.textContent = porcentaje + '%';
                }
                if (mensajeProgreso && actual < total) {
                    mensajeProgreso.textContent = `Procesando cliente ${actual} de ${total}...`;
                }
            }
        });
    }
});
</script>
