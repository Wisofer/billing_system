@model List<billing_system.Models.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rolUsuario = Context.Session.GetString("RolUsuario") ?? "";
    var esAdministrador = rolUsuario == "Administrador";
    var busqueda = ViewBag.Busqueda as string ?? "";
    var totalClientes = Model.Count;
    var clientesActivos = Model.Count(c => c.Activo);
    var nuevosEsteMes = Model.Count(c => c.FechaCreacion.Month == DateTime.Now.Month && c.FechaCreacion.Year == DateTime.Now.Year);
}

<!-- Encabezado -->
<div class="mb-6 flex items-center justify-between">
    <div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-1">Gestión de Clientes</h2>
        <p class="text-sm text-gray-500">Administra la información de tus clientes</p>
    </div>
    <div class="flex items-center space-x-3">
        <!-- Importar Clientes - Compacto -->
        <form action="/clientes/importar" method="post" enctype="multipart/form-data" class="flex items-center space-x-2">
            <label class="cursor-pointer">
                <input type="file" name="archivoExcel" accept=".xlsx,.xls" required 
                       class="hidden" id="archivoExcel" onchange="mostrarNombreArchivo(this)">
                <span class="text-sm text-gray-600 hover:text-blue-600 px-3 py-2 border border-gray-300 rounded-lg hover:border-blue-400 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    <span id="nombreArchivo">Importar Excel</span>
                </span>
            </label>
            <button type="submit" class="bg-blue-600 text-white px-3 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium @(esAdministrador ? "" : "opacity-50 cursor-not-allowed")" @(esAdministrador ? "" : "disabled")>
                Importar
            </button>
        </form>
        @if (esAdministrador)
        {
            <button onclick="abrirModalCrear()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span>Nuevo Cliente</span>
            </button>
        }
    </div>
</div>

<!-- Estadísticas Rápidas -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white border border-gray-200 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 mb-1">Total Clientes</p>
                <p class="text-2xl font-semibold text-gray-900">@totalClientes</p>
            </div>
            <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white border border-gray-200 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 mb-1">Clientes Activos</p>
                <p class="text-2xl font-semibold text-gray-900">@clientesActivos</p>
            </div>
            <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white border border-gray-200 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 mb-1">Nuevos Este Mes</p>
                <p class="text-2xl font-semibold text-gray-900">@nuevosEsteMes</p>
            </div>
            <div class="w-10 h-10 bg-amber-50 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de Clientes -->
<div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <!-- Header de la tabla -->
    <div class="border-b border-gray-100 px-6 py-4">
        <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Lista de Clientes
            </h3>
            <form method="get" action="/clientes" class="flex items-center space-x-2">
                <input type="text" name="busqueda" value="@busqueda" placeholder="Buscar..." 
                       class="px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64">
                <button type="submit" class="p-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
            </form>
        </div>
    </div>

    <!-- Tabla -->
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teléfono</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cédula</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
                @if (Model.Any())
                {
                    @foreach (var cliente in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900">@cliente.Codigo</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@cliente.Nombre</div>
                                @if (!string.IsNullOrEmpty(cliente.Email))
                                {
                                    <div class="text-sm text-gray-500">@cliente.Email</div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@(cliente.Telefono ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@(cliente.Cedula ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (cliente.Activo)
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-green-50 text-green-700">
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-amber-50 text-amber-700">
                                        Inactivo
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                @if (esAdministrador)
                                {
                                    <a href="/clientes/editar/@cliente.Id" class="text-gray-600 hover:text-gray-700">Editar</a>
                                    <form method="post" action="/clientes/eliminar/@cliente.Id" class="inline" onsubmit="return confirm('¿Estás seguro de eliminar este cliente?');">
                                        <button type="submit" class="text-red-600 hover:text-red-700">Eliminar</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-sm text-gray-500">
                            @if (!string.IsNullOrWhiteSpace(busqueda))
                            {
                                <p>No se encontraron clientes con el término "@busqueda"</p>
                            }
                            else
                            {
                                <p>No hay clientes registrados. <a href="#" onclick="abrirModalCrear(); return false;" class="text-blue-600 hover:text-blue-700">Crear el primero</a></p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Any())
    {
        <!-- Paginación -->
        <div class="bg-gray-50 px-6 py-3 border-t border-gray-100 flex items-center justify-between">
            <div class="text-sm text-gray-500">
                Mostrando <span class="font-medium text-gray-900">@Model.Count</span> cliente(s)
            </div>
        </div>
    }
</div>

<!-- Mensajes de notificación -->
@if (TempData["Success"] != null)
{
    <div class="fixed top-4 right-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg shadow-lg z-50 flex items-center space-x-2" id="successMessage">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>@TempData["Success"]</span>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="fixed top-4 right-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg shadow-lg z-50 flex items-center space-x-2" id="errorMessage">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>@TempData["Error"]</span>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="fixed top-4 right-4 bg-amber-50 border border-amber-200 text-amber-800 px-4 py-3 rounded-lg shadow-lg z-50 flex items-center space-x-2" id="warningMessage">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span>@TempData["Warning"]</span>
    </div>
}

<script>
function mostrarNombreArchivo(input) {
    const nombreArchivo = input.files[0]?.name || 'Seleccionar archivo Excel...';
    document.getElementById('nombreArchivo').textContent = nombreArchivo;
}

// Auto-ocultar mensajes después de 5 segundos
setTimeout(function() {
    const successMsg = document.getElementById('successMessage');
    const errorMsg = document.getElementById('errorMessage');
    const warningMsg = document.getElementById('warningMessage');
    
    if (successMsg) successMsg.style.display = 'none';
    if (errorMsg) errorMsg.style.display = 'none';
    if (warningMsg) warningMsg.style.display = 'none';
}, 5000);

// Funciones del Modal
function abrirModalCrear() {
    const modal = document.getElementById('modalCrearCliente');
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden'; // Prevenir scroll del body
    
    // Generar código automáticamente
    generarCodigoCliente();
}

async function generarCodigoCliente() {
    try {
        const response = await fetch('/clientes/obtener-codigo');
        const data = await response.json();
        document.getElementById('codigoCliente').value = data.codigo;
    } catch (error) {
        console.error('Error al obtener código:', error);
        // Fallback: generar código temporal
        const numeroCliente = Math.floor(Math.random() * 1000) + 1;
        document.getElementById('codigoCliente').value = `CLI-${String(numeroCliente).padStart(3, '0')}`;
    }
}

function cerrarModalCrear() {
    const modal = document.getElementById('modalCrearCliente');
    modal.classList.add('hidden');
    document.body.style.overflow = ''; // Restaurar scroll del body
    document.getElementById('formCrearCliente').reset();
    // Limpiar mensajes de error
    const errorElements = document.querySelectorAll('#formCrearCliente .text-red-500');
    errorElements.forEach(el => el.textContent = '');
    // Limpiar código
    document.getElementById('codigoCliente').value = '';
}

// Manejar envío del formulario
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('formCrearCliente');
    if (!form) {
        console.error('Formulario no encontrado');
        return;
    }
    
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const formData = new FormData(this);
        const data = {
            Codigo: formData.get('Codigo') || '',
            Nombre: formData.get('Nombre') || '',
            Telefono: formData.get('Telefono') || null,
            Cedula: formData.get('Cedula') || null,
            Email: formData.get('Email') || null
        };
        
        console.log('Datos a enviar:', data);
        
        // Limpiar errores anteriores
        document.querySelectorAll('#formCrearCliente .text-red-500').forEach(el => el.textContent = '');
        
        try {
            const response = await fetch('/clientes/crear', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(data)
            });
            
            console.log('Respuesta recibida:', response.status);
            
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const result = await response.json();
            console.log('Resultado:', result);
            
            if (result.success) {
                cerrarModalCrear();
                // Recargar la página para mostrar el nuevo cliente
                window.location.reload();
            } else {
                // Mostrar errores
                if (result.errors) {
                    Object.keys(result.errors).forEach(key => {
                        const errorElement = document.getElementById(`error-${key}`);
                        if (errorElement && result.errors[key] && result.errors[key].length > 0) {
                            errorElement.textContent = result.errors[key][0];
                        }
                    });
                } else if (result.message) {
                    alert(result.message);
                }
            }
        } catch (error) {
            console.error('Error completo:', error);
            alert('Error al crear el cliente: ' + error.message);
        }
    });
});
</script>

<!-- Modal Crear Cliente -->
<div id="modalCrearCliente" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen px-4">
        <!-- Overlay -->
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="cerrarModalCrear()"></div>

        <!-- Modal -->
        <div class="relative bg-white rounded-lg shadow-xl w-full max-w-lg">
            <form id="formCrearCliente" onsubmit="return false;" class="space-y-4">
                <!-- Header -->
                <div class="bg-white px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-900">Crear Nuevo Cliente</h3>
                        <button type="button" onclick="cerrarModalCrear()" class="text-gray-400 hover:text-gray-500">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Body -->
                <div class="bg-white px-6 py-4 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Código</label>
                        <input type="text" name="Codigo" id="codigoCliente" readonly class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-600 cursor-not-allowed" />
                        <p class="text-xs text-gray-500 mt-1">Generado automáticamente</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Nombre *</label>
                        <input type="text" name="Nombre" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span id="error-Nombre" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Teléfono</label>
                            <input type="text" name="Telefono" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Cédula</label>
                            <input type="text" name="Cedula" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" name="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    </div>
                </div>

                <!-- Footer -->
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-end space-x-3">
                    <button type="button" onclick="cerrarModalCrear()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium text-gray-700">
                        Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                        Crear Cliente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
