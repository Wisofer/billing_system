@model List<billing_system.Models.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Header")
@await Html.PartialAsync("_Estadisticas")
@await Html.PartialAsync("_Filtros")
@await Html.PartialAsync("_TablaClientes", Model)
@await Html.PartialAsync("_Notificaciones")
@await Html.PartialAsync("_ModalCrear")
@await Html.PartialAsync("_Scripts")

<!-- Loader para importación de Excel -->
<div id="loaderImportarExcel" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl p-8 max-w-md w-full mx-4">
        <div class="flex flex-col items-center space-y-4">
            <!-- Mensaje -->
            <div class="text-center w-full">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Importando Clientes</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                    Estamos procesando el archivo Excel, por favor espere...
                </p>
                
                <!-- Barra de progreso -->
                <div class="w-full">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoImportarTexto">0 / 0</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300" id="progresoImportarPorcentaje">0%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
                        <div id="barraProgresoImportar" class="bg-blue-600 h-3 rounded-full transition-all duration-300 ease-out" style="width: 0%">
                            <div class="h-full bg-blue-400 animate-pulse"></div>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 text-center" id="mensajeImportarProgreso">
                        Iniciando importación...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
