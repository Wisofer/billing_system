@{
    var esAdministrador = ViewBag.EsAdministrador as bool? ?? false;
}

<div class="mb-6 flex items-center justify-between">
    <div>
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Gestión de Clientes</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Administra la información de tus clientes</p>
    </div>
    <div class="flex items-center space-x-3">
        <form action="/clientes/importar" method="post" enctype="multipart/form-data" class="flex items-center space-x-2">
            <label class="cursor-pointer">
                <input type="file" name="archivoExcel" accept=".xlsx,.xls" required 
                       class="hidden" id="archivoExcel" onchange="mostrarNombreArchivo(this)">
                <span class="text-sm text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:border-blue-400 dark:hover:border-blue-500 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    <span id="nombreArchivo">Importar Excel</span>
                </span>
            </label>
            <button type="submit" class="bg-blue-600 text-white px-3 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium @(esAdministrador ? "" : "opacity-50 cursor-not-allowed")" @(esAdministrador ? "" : "disabled")>
                Importar
            </button>
        </form>
        @if (esAdministrador)
        {
            <button onclick="abrirModalCrear()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span>Nuevo Cliente</span>
            </button>
        }
    </div>
</div>

