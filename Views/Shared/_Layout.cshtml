    </script>
    <script>
        // Script inline para aplicar el tema ANTES de que se renderice el HTML
        // Esto evita el "flash" del tema al cambiar de página
        // PRIORIDAD ABSOLUTA: localStorage > servidor
        (function() {
            try {
                // Obtener tema de localStorage (PRIORIDAD ABSOLUTA)
                let temaLocalStorage = localStorage.getItem('tema');
                const temaServidor = '@temaActual';
                
                // Si no hay tema en localStorage, usar el del servidor y guardarlo
                if (!temaLocalStorage) {
                    temaLocalStorage = temaServidor || 'claro';
                    localStorage.setItem('tema', temaLocalStorage);
                }
                
                // Normalizar el tema
                const temaNormalizado = (temaLocalStorage === 'oscuro' || temaLocalStorage === 'dark') ? 'oscuro' : 'claro';
                
                // Aplicar el tema inmediatamente al elemento HTML (ANTES de cualquier otro script)
                const html = document.documentElement;
                if (temaNormalizado === 'oscuro') {
                    html.classList.add('dark');
                } else {
                    html.classList.remove('dark');
                }
                
                // Guardar el tema normalizado en localStorage
                localStorage.setItem('tema', temaNormalizado);
                
                // Marcar que el tema ya fue aplicado para evitar sobrescrituras
                window.__temaAplicado = true;
                window.__temaActual = temaNormalizado;
                
                // Protección: Observer para mantener el tema correcto
                // Si algo intenta cambiar el tema sin autorización, lo corregimos
                let proteccionActiva = true;
                const temaObserver = new MutationObserver(function(mutations) {
                    if (!proteccionActiva) return; // Si la protección está desactivada, no hacer nada
                    
                    mutations.forEach(function(mutation) {
                        if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                            const temaEsperado = temaNormalizado;
                            const tieneDark = document.documentElement.classList.contains('dark');
                            const temaActual = tieneDark ? 'oscuro' : 'claro';
                            
                            // Si el tema cambió sin nuestra autorización, corregirlo
                            if (temaActual !== temaEsperado) {
                                // Desactivar protección temporalmente para evitar loop
                                proteccionActiva = false;
                                
                                if (temaEsperado === 'oscuro') {
                                    document.documentElement.classList.add('dark');
                                } else {
                                    document.documentElement.classList.remove('dark');
                                }
                                
                                // Reactivar protección después de un breve delay
                                setTimeout(() => { proteccionActiva = true; }, 100);
                            }
                        }
                    });
                });
                
                // Observar cambios en el atributo class del elemento html
                temaObserver.observe(document.documentElement, {
                    attributes: true,
                    attributeFilter: ['class']
                });
                
                // Guardar el observer y la función para desactivar protección
                window.__temaObserver = temaObserver;
                window.__desactivarProteccionTema = function() { proteccionActiva = false; };
                window.__activarProteccionTema = function() { proteccionActiva = true; };
            } catch (e) {
                // Silenciar errores si localStorage no está disponible
            }
        })();
    </script>
    <script>
        // Script inline para restaurar el estado del sidebar ANTES de que se renderice
        // Esto evita el "flash" del sidebar al cambiar de página
        (function() {
            try {
                const sidebarState = localStorage.getItem('sidebarState');
                const isDesktop = window.innerWidth >= 1024;
                
                if (isDesktop && sidebarState === 'open') {
                    // Crear y aplicar estilo inmediatamente
                    const style = document.createElement('style');
                    style.id = 'sidebar-initial-state';
                    style.textContent = '#sidebar{transform:translateX(0)!important;transition:none!important;}#mainContent{margin-left:256px!important;transition:none!important;}';
                    (document.head || document.getElementsByTagName('head')[0]).appendChild(style);
                    
                    // Remover el estilo después de que se cargue el JavaScript principal
                    setTimeout(function() {
                        const initialStyle = document.getElementById('sidebar-initial-state');
                        if (initialStyle) {
                            initialStyle.remove();
                        }
                    }, 100);
                }
            } catch (e) {
                // Silenciar errores si localStorage no está disponible
            }
        })();
    </script>
