@using System.Security.Claims
@using billing_system.Utils
@{
    var estaAutenticado = User.Identity?.IsAuthenticated ?? false;
    var nombreUsuario = User.Identity?.Name ?? Context.Session.GetString("NombreUsuario") ?? "";
    var rolUsuario = User.FindFirst("Rol")?.Value ?? Context.Session.GetString("RolUsuario") ?? "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMSINET</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 antialiased">
    <div class="flex h-screen overflow-hidden">
        <!-- Overlay móvil -->
        <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-40 z-40 hidden lg:hidden transition-opacity" onclick="closeSidebar()"></div>

        <!-- Sidebar Minimalista -->
        <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 flex flex-col transform transition-transform duration-300 ease-in-out" style="transform: translateX(-100%);">
            <!-- Logo -->
            <div class="h-16 flex items-center px-6 border-b border-gray-100">
                <a href="/" class="flex items-center space-x-2">
                    <img src="~/images/logo.png" alt="Logo" class="w-8 h-8 object-contain" />
                    <span class="text-lg font-semibold text-gray-900">EMSINET</span>
                </a>
            </div>

            <!-- Navegación -->
            <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
                <a href="/" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    <span class="text-sm font-medium">Inicio</span>
                </a>

                <a href="/clientes" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="text-sm font-medium">Clientes</span>
                </a>

                <a href="/facturas" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="text-sm font-medium">Facturas</span>
                </a>

                <a href="/servicios" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    <span class="text-sm font-medium">Servicios</span>
                </a>

                <a href="/pagos" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="text-sm font-medium">Pagos</span>
                </a>

                @if (SecurityHelper.IsAdministrator(User))
                {
                    <a href="/configuraciones" class="flex items-center space-x-3 px-3 py-2.5 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors group">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span class="text-sm font-medium">Configuraciones</span>
                    </a>
                }
            </nav>

            <!-- Usuario -->
            @if (estaAutenticado)
            {
                <div class="border-t border-gray-100 p-4">
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="w-9 h-9 rounded-full bg-blue-100 flex items-center justify-center">
                            <span class="text-blue-600 font-semibold text-sm">@(nombreUsuario.Length > 0 ? nombreUsuario[0].ToString().ToUpper() : "U")</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 truncate">@nombreUsuario</p>
                            <p class="text-xs text-gray-500">@rolUsuario</p>
                        </div>
                    </div>
                    <form action="/logout" method="post">
                        <button type="submit" class="w-full flex items-center justify-center space-x-2 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </div>
            }
        </aside>

        <!-- Contenido Principal -->
        <div id="mainContent" class="flex-1 flex flex-col overflow-hidden transition-all duration-300 ease-in-out">
            <!-- Header Minimalista -->
            <header class="h-14 bg-white border-b border-gray-100 flex items-center justify-between px-6">
                <div class="flex items-center space-x-4">
                    <button type="button" onclick="toggleSidebar()" class="p-2 hover:bg-gray-100 rounded-lg transition-colors" id="hamburgerBtn">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                    <h1 class="text-xl font-semibold text-gray-900">@ViewData["Title"]</h1>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto bg-gray-50">
                <div class="p-6">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer Minimalista -->
            <footer class="h-12 bg-white border-t border-gray-100 flex items-center justify-center">
                <p class="text-xs text-gray-400">
                    POWERED BY <a href="https://www.cowib.es/" target="_blank" rel="noopener noreferrer" class="font-semibold text-gray-600 hover:text-blue-600 transition-colors">COWIB</a>
                </p>
            </footer>
        </div>
    </div>

    <!-- JavaScript Sidebar -->
    <script>
        (function() {
            'use strict';
            let sidebarOpen = false;
            
            function toggleSidebar() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                
                if (!sidebar) return;
                
                sidebarOpen = !sidebarOpen;
                
                if (sidebarOpen) {
                    sidebar.style.transform = 'translateX(0)';
                    sidebar.style.transition = 'transform 0.3s ease-in-out';
                    if (main) {
                        main.style.marginLeft = '256px';
                        main.style.transition = 'margin-left 0.3s ease-in-out';
                    }
                    if (overlay && window.innerWidth < 1024) {
                        overlay.style.display = 'block';
                    }
                } else {
                    sidebar.style.transform = 'translateX(-100%)';
                    sidebar.style.transition = 'transform 0.3s ease-in-out';
                    if (main) {
                        main.style.marginLeft = '0';
                        main.style.transition = 'margin-left 0.3s ease-in-out';
                    }
                    if (overlay) overlay.style.display = 'none';
                }
            }
            
            function closeSidebar() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                sidebarOpen = false;
                if (sidebar) sidebar.style.transform = 'translateX(-100%)';
                if (main) main.style.marginLeft = '0';
                if (overlay) overlay.style.display = 'none';
            }
            
            window.toggleSidebar = toggleSidebar;
            window.closeSidebar = closeSidebar;
            
            function init() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                
                if (window.innerWidth >= 1024) {
                    if (sidebar) {
                        sidebar.style.transform = 'translateX(0)';
                        sidebarOpen = true;
                    }
                    if (main) main.style.marginLeft = '256px';
                } else {
                    if (sidebar) {
                        sidebar.style.transform = 'translateX(-100%)';
                        sidebarOpen = false;
                    }
                    if (main) main.style.marginLeft = '0';
                }
                if (overlay) overlay.style.display = 'none';
                
                const btn = document.getElementById('hamburgerBtn');
                if (btn) {
                    btn.onclick = function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        toggleSidebar();
                        return false;
                    };
                }
            }
            
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', init);
            } else {
                init();
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
