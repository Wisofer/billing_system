    <!-- JavaScript Sidebar y Tema -->
    <script>
        (function() {
            'use strict';
            let sidebarOpen = false;
            const STORAGE_KEY = 'sidebarState';
            
            // Función para guardar el estado del sidebar
            function saveSidebarState(state) {
                try {
                    localStorage.setItem(STORAGE_KEY, state ? 'open' : 'closed');
                } catch (e) {
                    console.warn('No se pudo guardar el estado del sidebar:', e);
                }
            }
            
            // Función para obtener el estado guardado del sidebar
            function getSavedSidebarState() {
                try {
                    const state = localStorage.getItem(STORAGE_KEY);
                    return state === 'open';
                } catch (e) {
                    console.warn('No se pudo leer el estado del sidebar:', e);
                    return null;
                }
            }
            
            // Función para aplicar el estado del sidebar
            function applySidebarState(isOpen, sidebar, main, overlay) {
                if (!sidebar) return;
                
                sidebarOpen = isOpen;
                const isCollapsed = sidebar.classList.contains('sidebar-collapsed');
                const sidebarWidth = isCollapsed ? '4rem' : '14rem';
                
                if (isOpen) {
                    sidebar.style.transform = 'translateX(0)';
                    sidebar.style.transition = 'transform 0.3s ease-in-out';
                    if (main && window.innerWidth >= 1024) {
                        main.style.marginLeft = sidebarWidth;
                        main.style.transition = 'margin-left 0.3s ease-in-out';
                    }
                    if (overlay && window.innerWidth < 1024) {
                        overlay.style.display = 'block';
                    }
                } else {
                    sidebar.style.transform = 'translateX(-100%)';
                    sidebar.style.transition = 'transform 0.3s ease-in-out';
                    if (main) {
                        main.style.marginLeft = '0';
                        main.style.transition = 'margin-left 0.3s ease-in-out';
                    }
                    if (overlay) overlay.style.display = 'none';
                }
            }
            
            function toggleSidebar() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                
                if (!sidebar) return;
                
                const isCollapsed = sidebar.classList.contains('sidebar-collapsed');
                const isDesktop = window.innerWidth >= 1024;
                
                // En desktop: si está abierto, colapsar/expandir; si está cerrado, abrir expandido
                // En móvil: solo abrir/cerrar
                if (isDesktop) {
                    if (sidebarOpen) {
                        // Si está abierto, colapsar o expandir
                        toggleSidebarCollapse();
                    } else {
                        // Si está cerrado, abrir expandido
                        sidebarCollapsed = false;
                        sidebar.classList.remove('sidebar-collapsed');
                        sidebar.classList.add('sidebar-expanded');
                        sidebar.style.width = '14rem';
                        saveCollapsedState(false);
                        
                        sidebarOpen = true;
                        applySidebarState(true, sidebar, main, overlay);
                        saveSidebarState(true);
                    }
                } else {
                    // En móvil: solo abrir/cerrar
                    sidebarOpen = !sidebarOpen;
                    applySidebarState(sidebarOpen, sidebar, main, overlay);
                    saveSidebarState(sidebarOpen);
                }
            }
            
            function closeSidebar() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                
                sidebarOpen = false;
                applySidebarState(false, sidebar, main, overlay);
                saveSidebarState(false);
            }
            
            window.toggleSidebar = toggleSidebar;
            window.closeSidebar = closeSidebar;
            
            // Funcionalidad de colapsar/expandir sidebar
            let sidebarCollapsed = false;
            let sidebarStateRestored = false; // Bandera para evitar múltiples restauraciones
            const COLLAPSE_STORAGE_KEY = 'sidebarCollapsed';
            
            function getCollapsedState() {
                try {
                    const state = localStorage.getItem(COLLAPSE_STORAGE_KEY);
                    return state === 'true';
                } catch (e) {
                    return false;
                }
            }
            
            function saveCollapsedState(collapsed) {
                try {
                    localStorage.setItem(COLLAPSE_STORAGE_KEY, collapsed ? 'true' : 'false');
                } catch (e) {
                    console.warn('No se pudo guardar el estado de colapso:', e);
                }
            }
            
            function toggleSidebarCollapse() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                
                if (!sidebar) return;
                
                sidebarCollapsed = !sidebarCollapsed;
                
                if (sidebarCollapsed) {
                    sidebar.classList.remove('sidebar-expanded');
                    sidebar.classList.add('sidebar-collapsed');
                    sidebar.style.width = '4rem';
                    if (main) {
                        main.classList.add('sidebar-collapsed-margin');
                        if (sidebarOpen && window.innerWidth >= 1024) {
                            main.style.marginLeft = '4rem';
                        }
                    }
                } else {
                    sidebar.classList.remove('sidebar-collapsed');
                    sidebar.classList.add('sidebar-expanded');
                    sidebar.style.width = '14rem';
                    if (main) {
                        main.classList.remove('sidebar-collapsed-margin');
                        if (sidebarOpen && window.innerWidth >= 1024) {
                            main.style.marginLeft = '14rem';
                        }
                    }
                }
                
                saveCollapsedState(sidebarCollapsed);
            }
            
            function applyCollapsedState() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                
                if (!sidebar) return;
                
                sidebarCollapsed = getCollapsedState();
                
                if (sidebarCollapsed) {
                    sidebar.classList.remove('sidebar-expanded');
                    sidebar.classList.add('sidebar-collapsed');
                    sidebar.style.width = '4rem';
                    if (main) {
                        main.classList.add('sidebar-collapsed-margin');
                        if (sidebarOpen && window.innerWidth >= 1024) {
                            main.style.marginLeft = '4rem';
                        }
                    }
                } else {
                    sidebar.classList.remove('sidebar-collapsed');
                    sidebar.classList.add('sidebar-expanded');
                    sidebar.style.width = '14rem';
                    if (main) {
                        main.classList.remove('sidebar-collapsed-margin');
                        if (sidebarOpen && window.innerWidth >= 1024) {
                            main.style.marginLeft = '14rem';
                        }
                    }
                }
            }
            
            window.toggleSidebarCollapse = toggleSidebarCollapse;
            
            // Aplicar estado colapsado al cargar (solo si no se aplicó ya en restoreSidebarState)
            // Esto es un respaldo por si restoreSidebarState no se ejecutó aún
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setTimeout(function() {
                        const sidebar = document.getElementById('sidebar');
                        if (sidebar && !sidebar.classList.contains('sidebar-collapsed') && !sidebar.classList.contains('sidebar-expanded')) {
                            applyCollapsedState();
                        }
                    }, 150);
                });
            } else {
                setTimeout(function() {
                    const sidebar = document.getElementById('sidebar');
                    if (sidebar && !sidebar.classList.contains('sidebar-collapsed') && !sidebar.classList.contains('sidebar-expanded')) {
                        applyCollapsedState();
                    }
                }, 150);
            }
            
            // Función global para aplicar tema (usada desde Configuraciones)
            window.aplicarTema = function(tema) {
                // Desactivar protección temporalmente para permitir el cambio
                if (window.__desactivarProteccionTema) {
                    window.__desactivarProteccionTema();
                }
                
                const html = document.documentElement;
                const temaNormalizado = (tema === 'oscuro' || tema === 'dark') ? 'oscuro' : 'claro';
                
                if (temaNormalizado === 'oscuro') {
                    html.classList.add('dark');
                } else {
                    html.classList.remove('dark');
                }
                
                // Actualizar las variables globales
                window.__temaAplicado = true;
                window.__temaActual = temaNormalizado;
                
                // Guardar en localStorage
                try {
                    localStorage.setItem('tema', temaNormalizado);
                } catch (e) {
                    // Silenciar errores
                }
                
                // Reactivar protección después de un breve delay
                setTimeout(() => {
                    if (window.__activarProteccionTema) {
                        window.__activarProteccionTema();
                    }
                }, 150);
            };
            
            function init() {
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                
                if (!sidebar || !main) {
                    // Si los elementos no están listos, usar MutationObserver
                    const observer = new MutationObserver(function(mutations, obs) {
                        const sb = document.getElementById('sidebar');
                        const m = document.getElementById('mainContent');
                        const ov = document.getElementById('sidebarOverlay');
                        
                        if (sb && m) {
                            restoreSidebarState(sb, m, ov);
                            obs.disconnect();
                        }
                    });
                    
                    observer.observe(document.documentElement, {
                        childList: true,
                        subtree: true
                    });
                    
                    // Timeout de seguridad para desconectar el observer después de 5 segundos
                    setTimeout(() => observer.disconnect(), 5000);
                    return;
                }
                
                // Aplicar estado colapsado ANTES de restaurar el estado abierto/cerrado
                applyCollapsedState();
                
                // Restaurar estado inmediatamente (sin delay para evitar parpadeos)
                restoreSidebarState(sidebar, main, overlay);
                
                const btn = document.getElementById('hamburgerBtn');
                if (btn) {
                    btn.onclick = function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        toggleSidebar();
                        return false;
                    };
                }
                
                // NO aplicar tema aquí - ya se aplicó desde el head
                // El tema ya está correctamente aplicado desde el script inline en el head
                // Solo verificamos que localStorage esté sincronizado (sin cambiar el tema)
                try {
                    const temaLocalStorage = localStorage.getItem('tema');
                    const temaActualEnDOM = document.documentElement.classList.contains('dark') ? 'oscuro' : 'claro';
                    
                    // Solo sincronizar localStorage si no coincide, pero NO cambiar el tema del DOM
                    // El DOM ya tiene el tema correcto desde el head
                    if (temaLocalStorage && temaLocalStorage !== temaActualEnDOM) {
                        // El DOM tiene prioridad (ya fue aplicado desde el head)
                        // Actualizar localStorage para que coincida con el DOM
                        localStorage.setItem('tema', temaActualEnDOM);
                        window.__temaActual = temaActualEnDOM;
                    } else if (!temaLocalStorage) {
                        // Si no hay tema en localStorage, guardar el tema actual del DOM
                        localStorage.setItem('tema', temaActualEnDOM);
                        window.__temaActual = temaActualEnDOM;
                    }
                } catch (e) {
                    // Silenciar errores de localStorage
                }
            }
            
            function restoreSidebarState(sidebar, main, overlay) {
                // Evitar múltiples restauraciones
                if (sidebarStateRestored) {
                    return;
                }
                
                const isDesktop = window.innerWidth >= 1024;
                const savedState = getSavedSidebarState();
                
                // PRIMERO: Aplicar estado colapsado desde localStorage
                sidebarCollapsed = getCollapsedState();
                if (sidebarCollapsed) {
                    sidebar.classList.remove('sidebar-expanded');
                    sidebar.classList.add('sidebar-collapsed');
                    sidebar.style.width = '4rem';
                } else {
                    sidebar.classList.remove('sidebar-collapsed');
                    sidebar.classList.add('sidebar-expanded');
                    sidebar.style.width = '14rem';
                }
                
                // En desktop: usar el estado guardado si existe, sino abrir por defecto
                // En móvil: siempre cerrar por defecto
                let shouldBeOpen = false;
                
                if (isDesktop) {
                    // En desktop, si hay un estado guardado, usarlo; sino, abrir por defecto
                    shouldBeOpen = savedState !== null ? savedState : true;
                } else {
                    // En móvil, siempre cerrar por defecto
                    shouldBeOpen = false;
                }
                
                // Usar el estado colapsado que acabamos de aplicar
                const sidebarWidth = sidebarCollapsed ? '4rem' : '14rem';
                
                // Aplicar sin transición inicialmente para evitar flash
                if (shouldBeOpen) {
                    sidebar.style.transition = 'none';
                    sidebar.style.transform = 'translateX(0)';
                    if (main && isDesktop) {
                        main.style.transition = 'none';
                        main.style.marginLeft = sidebarWidth;
                        main.classList.toggle('sidebar-collapsed-margin', sidebarCollapsed);
                    }
                    if (overlay && window.innerWidth < 1024) {
                        overlay.style.display = 'block';
                    }
                    
                    // Restaurar transiciones después de un pequeño delay
                    setTimeout(() => {
                        sidebar.style.transition = 'transform 0.3s ease-in-out';
                        if (main) main.style.transition = 'margin-left 0.3s ease-in-out';
                    }, 50);
                } else {
                    sidebar.style.transition = 'none';
                    sidebar.style.transform = 'translateX(-100%)';
                    if (main) {
                        main.style.transition = 'none';
                        main.style.marginLeft = '0';
                    }
                    if (overlay) overlay.style.display = 'none';
                    
                    // Restaurar transiciones después de un pequeño delay
                    setTimeout(() => {
                        sidebar.style.transition = 'transform 0.3s ease-in-out';
                        if (main) main.style.transition = 'margin-left 0.3s ease-in-out';
                    }, 50);
                }
                
                sidebarOpen = shouldBeOpen;
                sidebarStateRestored = true; // Marcar como restaurado
            }
            
            // Ejecutar inmediatamente si el DOM ya está listo, sino esperar
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', init);
                // También intentar ejecutar inmediatamente como respaldo
                setTimeout(init, 0);
            } else {
                init();
            }
            
            // Ejecutar también cuando la página esté completamente cargada como respaldo
            // PERO solo si no se ha restaurado ya
            window.addEventListener('load', function() {
                if (sidebarStateRestored) return; // Ya se restauró, no hacer nada
                
                const sidebar = document.getElementById('sidebar');
                const main = document.getElementById('mainContent');
                const overlay = document.getElementById('sidebarOverlay');
                if (sidebar && main) {
                    restoreSidebarState(sidebar, main, overlay);
                }
                
                // Protección: Asegurar que el tema se mantenga correcto después de la carga
                // Solo si localStorage tiene un tema diferente al DOM, corregirlo
                try {
                    const temaLocalStorage = localStorage.getItem('tema');
                    if (temaLocalStorage) {
                        const temaNormalizado = (temaLocalStorage === 'oscuro' || temaLocalStorage === 'dark') ? 'oscuro' : 'claro';
                        const temaActualDOM = document.documentElement.classList.contains('dark') ? 'oscuro' : 'claro';
                        
                        // Si el DOM no coincide con localStorage, corregir el DOM
                        if (temaNormalizado !== temaActualDOM) {
                            if (window.aplicarTema) {
                                window.aplicarTema(temaNormalizado);
                            }
                        }
                    }
                } catch (e) {
                    // Silenciar errores
                }
            });
        })();
    </script>

    <!-- Keep-Alive: Renovar sesión automáticamente para evitar cierres inesperados -->
    @if (estaAutenticado)
    {
        <script>
            (function() {
                'use strict';
                
                let keepAliveInterval;
                let lastActivity = Date.now();
                const KEEP_ALIVE_INTERVAL = 10 * 60 * 1000; // 10 minutos (menos que el tiempo de expiración)
                const ACTIVITY_THRESHOLD = 5 * 60 * 1000; // 5 minutos de inactividad antes de dejar de renovar
                
                // Función para renovar la sesión
                function renewSession() {
                    fetch('/auth/keep-alive', {
                        method: 'GET',
                        credentials: 'include', // Incluir cookies
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        }
                        // Si la respuesta no es OK, puede ser que la sesión expiró
                        if (response.status === 401 || response.status === 403) {
                            console.warn('Sesión expirada, redirigiendo al login...');
                            window.location.href = '/login';
                        }
                        return null;
                    })
                    .then(data => {
                        if (data && data.success) {
                            console.log('Sesión renovada automáticamente');
                        }
                    })
                    .catch(error => {
                        console.error('Error al renovar sesión:', error);
                    });
                }
                
                // Detectar actividad del usuario
                const activityEvents = ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart', 'click'];
                activityEvents.forEach(event => {
                    document.addEventListener(event, function() {
                        lastActivity = Date.now();
                    }, { passive: true });
                });
                
                // Iniciar keep-alive cuando la página carga
                function startKeepAlive() {
                    // Renovar inmediatamente al cargar
                    renewSession();
                    
                    // Configurar intervalo para renovar cada 10 minutos
                    keepAliveInterval = setInterval(function() {
                        const timeSinceLastActivity = Date.now() - lastActivity;
                        
                        // Solo renovar si el usuario ha tenido actividad reciente
                        // Si está inactivo por más de 5 minutos, dejar de renovar
                        if (timeSinceLastActivity < ACTIVITY_THRESHOLD) {
                            renewSession();
                        } else {
                            console.log('Usuario inactivo, pausando renovación de sesión');
                        }
                    }, KEEP_ALIVE_INTERVAL);
                }
                
                // Iniciar cuando el DOM esté listo
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', startKeepAlive);
                } else {
                    startKeepAlive();
                }
                
                // Limpiar intervalo cuando la página se descarga
                window.addEventListener('beforeunload', function() {
                    if (keepAliveInterval) {
                        clearInterval(keepAliveInterval);
                    }
                });
            })();
        </script>
    }

