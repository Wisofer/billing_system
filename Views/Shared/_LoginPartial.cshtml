@{
    var usuarioActual = Context.Session.GetString("UsuarioActual");
    var rolUsuario = Context.Session.GetString("RolUsuario") ?? "";
    var nombreUsuario = Context.Session.GetString("NombreUsuario") ?? "";
    var estaAutenticado = !string.IsNullOrEmpty(usuarioActual);
}

@if (estaAutenticado)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                @nombreUsuario (@rolUsuario)
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="dropdown-item">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
        </li>
    </ul>
}

