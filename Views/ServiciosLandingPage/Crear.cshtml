@model billing_system.Models.Entities.ServicioLandingPage
@{
    ViewData["Title"] = "Crear Servicio - Landing Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Crear Servicio de Internet</h1>
        <p class="text-gray-600 dark:text-gray-400 mt-1">Agrega un nuevo servicio para la landing page</p>
    </div>

    <form action="/servicios-landing/crear" method="post" class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- T칤tulo -->
            <div class="md:col-span-2">
                <label for="Titulo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    T칤tulo del Servicio *
                </label>
                <input type="text" name="Titulo" id="Titulo" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Plan de hasta 10Mbps" required>
            </div>

            <!-- Descripci칩n -->
            <div class="md:col-span-2">
                <label for="Descripcion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Descripci칩n *
                </label>
                <textarea name="Descripcion" id="Descripcion" rows="3" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Servicio de Internet Residencial hasta 10mbps" required></textarea>
            </div>

            <!-- Precio -->
            <div>
                <label for="Precio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Precio (C$) *
                </label>
                <input type="number" name="Precio" id="Precio" step="0.01" min="0" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="920.00" required>
            </div>

            <!-- Velocidad -->
            <div>
                <label for="Velocidad" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Velocidad
                </label>
                <input type="text" name="Velocidad" id="Velocidad" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="10Mbps">
            </div>

            <!-- Icono -->
            <div>
                <label for="Icono" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Icono (Emoji)
                </label>
                <input type="text" name="Icono" id="Icono" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="游니">
            </div>

            <!-- Orden -->
            <div>
                <label for="Orden" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Orden de Visualizaci칩n
                </label>
                <input type="number" name="Orden" id="Orden" value="0" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" min="0">
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Menor n칰mero aparece primero</p>
            </div>

            <!-- Etiqueta -->
            <div>
                <label for="Etiqueta" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Etiqueta Especial
                </label>
                <input type="text" name="Etiqueta" id="Etiqueta" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="OFERTA DICIEMBRE">
            </div>

            <!-- Color de Etiqueta -->
            <div>
                <label for="ColorEtiqueta" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Color de Etiqueta (Tailwind)
                </label>
                <select name="ColorEtiqueta" id="ColorEtiqueta" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="">Sin color...</option>
                    <option value="bg-red-500">Rojo</option>
                    <option value="bg-blue-500">Azul</option>
                    <option value="bg-green-500">Verde</option>
                    <option value="bg-yellow-500">Amarillo</option>
                    <option value="bg-purple-500">Morado</option>
                    <option value="bg-pink-500">Rosa</option>
                    <option value="bg-indigo-500">칈ndigo</option>
                </select>
            </div>

            <!-- Caracter칤sticas (JSON) -->
            <div class="md:col-span-2">
                <label for="Caracteristicas" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Caracter칤sticas (JSON array - opcional)
                </label>
                <textarea name="Caracteristicas" id="Caracteristicas" rows="3" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white font-mono text-sm" placeholder='["10Mbps de velocidad", "Router incluido", "Soporte 24/7"]'></textarea>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Formato: ["caracter칤stica 1", "caracter칤stica 2"]</p>
            </div>

            <!-- Activo -->
            <div class="flex items-center">
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="checkbox" name="Activo" value="true" checked class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Visible en landing page</span>
                </label>
            </div>

            <!-- Destacado -->
            <div class="flex items-center">
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="checkbox" name="Destacado" value="true" class="w-5 h-5 text-yellow-600 border-gray-300 rounded focus:ring-yellow-500">
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Marcar como destacado</span>
                </label>
            </div>
        </div>

        <!-- Botones -->
        <div class="mt-8 flex items-center justify-end space-x-4">
            <a href="/servicios-landing" class="px-6 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                Cancelar
            </a>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                Crear Servicio
            </button>
        </div>
    </form>
</div>

