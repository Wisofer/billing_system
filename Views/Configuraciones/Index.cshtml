            btnClaro.className = clasesBase + ' ' + clasesSeleccionado;
            btnOscuro.className = clasesBase + ' ' + clasesNoSeleccionado;
        } else {
            btnClaro.className = clasesBase + ' ' + clasesNoSeleccionado;
            btnOscuro.className = clasesBase + ' ' + clasesSeleccionado;
        }
    }

    // Aplicar tema al cargar
    function inicializarTema() {
        // Obtener tema del localStorage o del servidor
        const temaLocalStorage = localStorage.getItem('tema');
        const temaServidor = '@temaActual';
        const temaGuardado = temaLocalStorage || temaServidor || 'claro';
        
