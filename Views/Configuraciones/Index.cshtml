        // Aplicar el tema (ya deber√≠a estar aplicado desde el head, pero esto actualiza los botones)
        aplicarTema(temaNormalizado);
        
        // Sincronizar localStorage
        if (localStorage.getItem('tema') !== temaNormalizado) {
            localStorage.setItem('tema', temaNormalizado);
        }
    }
    
