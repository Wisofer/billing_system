        if (!btnClaro || !btnOscuro) {
            // Si los botones no est√°n disponibles, intentar de nuevo despu√©s de un breve delay
            setTimeout(() => actualizarBotonesTema(tema), 100);
            return;
        }
        
        // Clases base comunes
        const clasesBase = 'px-4 py-2 border-2 rounded-lg transition-all duration-200 flex items-center space-x-2 font-medium';
        
        // Clases para bot√≥n no seleccionado (borde gris delgado)
