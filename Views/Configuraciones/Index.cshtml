        }).catch(error => {
            console.error('Error al cambiar tema:', error);
        });
    }

    function aplicarTema(tema) {
        // Normalizar el tema
        const temaNormalizado = (tema === 'oscuro' || tema === 'dark') ? 'oscuro' : 'claro';
        
        // Usar la funci√≥n global si est√° disponible, sino aplicar directamente
        if (window.aplicarTema) {
            window.aplicarTema(temaNormalizado);
        } else {
            // Aplicar el tema al documento
            if (temaNormalizado === 'oscuro') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        }
        
        // Guardar en localStorage con el valor normalizado
        localStorage.setItem('tema', temaNormalizado);
        
        // Actualizar botones visualmente (usar el tema normalizado)
        actualizarBotonesTema(temaNormalizado);
    }
    
