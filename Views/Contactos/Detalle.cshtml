@model billing_system.Models.Entities.Contacto
@{
    ViewData["Title"] = "Detalle del Mensaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var estadoIcon = Model.Estado == "Nuevo" ? "üîµ" : (Model.Estado == "Le√≠do" ? "‚ö™" : "‚úÖ");
    var estadoColor = Model.Estado == "Nuevo" ? "blue" : (Model.Estado == "Le√≠do" ? "gray" : "green");
}

<div class="max-w-3xl mx-auto space-y-6">
    <!-- Encabezado -->
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <a href="/Contactos" class="p-2 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                ‚Üê Volver
            </a>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                üì¨ Mensaje de Contacto
            </h1>
        </div>
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-@(estadoColor)-100 dark:bg-@(estadoColor)-900/30 text-@(estadoColor)-700 dark:text-@(estadoColor)-300">
            @estadoIcon @Model.Estado
        </span>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 px-4 py-3 rounded-lg">
            ‚úÖ @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 px-4 py-3 rounded-lg">
            ‚ùå @TempData["Error"]
        </div>
    }

    <!-- Tarjeta del mensaje -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <!-- Informaci√≥n del contacto -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-start gap-4">
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                    @Model.Nombre.Substring(0, 1).ToUpper()
                </div>
                <div class="flex-1">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white">
                        @Model.Nombre
                    </h2>
                    <div class="mt-2 space-y-1">
                        <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                            <span>üìß</span>
                            <a href="mailto:@Model.Correo" class="hover:text-blue-600 dark:hover:text-blue-400">
                                @Model.Correo
                            </a>
                        </div>
                        <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                            <span>üì±</span>
                            <span>@Model.Telefono</span>
                            <a href="https://wa.me/505@(Model.Telefono.Replace("-", "").Replace(" ", ""))" 
                               target="_blank"
                               class="ml-2 px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded text-xs hover:bg-green-200 dark:hover:bg-green-800/30 transition-colors inline-flex items-center gap-1">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                                </svg>
                                WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
                <div class="text-right text-sm text-gray-500 dark:text-gray-400">
                    <div>@Model.FechaEnvio.ToString("dd/MM/yyyy")</div>
                    <div>@Model.FechaEnvio.ToString("HH:mm")</div>
                </div>
            </div>
        </div>

        <!-- Mensaje -->
        <div class="p-6">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">
                Mensaje
            </h3>
            <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-4">
                <p class="text-gray-800 dark:text-gray-200 whitespace-pre-wrap leading-relaxed">@Model.Mensaje</p>
            </div>
        </div>

        <!-- Historial de estados -->
        <div class="px-6 pb-6">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">
                Historial
            </h3>
            <div class="space-y-2 text-sm">
                <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                    <span class="w-20">Recibido:</span>
                    <span class="font-medium">@Model.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                @if (Model.FechaLeido.HasValue)
                {
                    <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                        <span class="w-20">Le√≠do:</span>
                        <span class="font-medium">@Model.FechaLeido.Value.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                }
                @if (Model.FechaRespondido.HasValue)
                {
                    <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                        <span class="w-20">Respondido:</span>
                        <span class="font-medium">@Model.FechaRespondido.Value.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                }
            </div>
        </div>

        <!-- Acciones -->
        <div class="px-6 py-4 bg-gray-50 dark:bg-gray-900/50 border-t border-gray-200 dark:border-gray-700 flex flex-wrap gap-3">
            <a href="mailto:@Model.Correo" 
               class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Enviar Email
            </a>
            <a href="https://wa.me/505@(Model.Telefono.Replace("-", "").Replace(" ", ""))" 
               target="_blank"
               class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                WhatsApp
            </a>
            @if (Model.Estado != "Respondido")
            {
                <form method="post" action="/Contactos/MarcarRespondido/@Model.Id" class="inline">
                    <button type="submit" 
                            class="px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Marcar Respondido
                    </button>
                </form>
            }
            <form method="post" action="/Contactos/Eliminar/@Model.Id" class="inline ml-auto"
                  onsubmit="return confirm('¬øEst√°s seguro de eliminar este mensaje?')">
                <button type="submit" 
                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Eliminar
                </button>
            </form>
        </div>
    </div>
</div>

