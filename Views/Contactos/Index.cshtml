@model billing_system.Models.ViewModels.PagedResult<billing_system.Models.Entities.Contacto>
@{
    ViewData["Title"] = "Mensajes de Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var estado = ViewBag.Estado as string;
    var busqueda = ViewBag.Busqueda as string;
    var tamanoPagina = (int)(ViewBag.TamanoPagina ?? 15);
    var totalNuevos = (int)(ViewBag.TotalNuevos ?? 0);
    var totalLeidos = (int)(ViewBag.TotalLeidos ?? 0);
    var totalRespondidos = (int)(ViewBag.TotalRespondidos ?? 0);
    var totalMensajes = totalNuevos + totalLeidos + totalRespondidos;
}

<div class="space-y-6">
    <!-- Encabezado -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                üì¨ Mensajes de Contacto
                @if (totalNuevos > 0)
                {
                    <span class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full animate-pulse">
                        @totalNuevos nuevo@(totalNuevos > 1 ? "s" : "")
                    </span>
                }
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
                Mensajes recibidos desde la landing page
            </p>
        </div>
    </div>

    <!-- Estad√≠sticas -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                    <span class="text-2xl">üì®</span>
                </div>
                <div>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">@totalMensajes</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Total</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                    <span class="text-2xl">üîµ</span>
                </div>
                <div>
                    <p class="text-2xl font-bold text-blue-600 dark:text-blue-400">@totalNuevos</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Nuevos</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-gray-100 dark:bg-gray-700 rounded-lg">
                    <span class="text-2xl">‚ö™</span>
                </div>
                <div>
                    <p class="text-2xl font-bold text-gray-600 dark:text-gray-300">@totalLeidos</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Le√≠dos</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
                    <span class="text-2xl">‚úÖ</span>
                </div>
                <div>
                    <p class="text-2xl font-bold text-green-600 dark:text-green-400">@totalRespondidos</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Respondidos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-4">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Buscar</label>
                <input type="text" name="busqueda" value="@busqueda" 
                       placeholder="Nombre, correo, tel√©fono o mensaje..."
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="w-full md:w-48">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Estado</label>
                <select name="estado" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="">Todos</option>
                    <option value="Nuevo" @(estado == "Nuevo" ? "selected" : "")>üîµ Nuevos</option>
                    <option value="Le√≠do" @(estado == "Le√≠do" ? "selected" : "")>‚ö™ Le√≠dos</option>
                    <option value="Respondido" @(estado == "Respondido" ? "selected" : "")>‚úÖ Respondidos</option>
                </select>
            </div>
            <div class="w-full md:w-32">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Mostrar</label>
                <select name="tamanoPagina" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
                    <option value="10" @(tamanoPagina == 10 ? "selected" : "")>10</option>
                    <option value="15" @(tamanoPagina == 15 ? "selected" : "")>15</option>
                    <option value="25" @(tamanoPagina == 25 ? "selected" : "")>25</option>
                    <option value="50" @(tamanoPagina == 50 ? "selected" : "")>50</option>
                </select>
            </div>
            <div class="flex items-end gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    üîç Filtrar
                </button>
                <a href="/Contactos" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                    ‚Ü∫ Limpiar
                </a>
            </div>
        </form>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 px-4 py-3 rounded-lg">
            ‚úÖ @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 px-4 py-3 rounded-lg">
            ‚ùå @TempData["Error"]
        </div>
    }

    <!-- Lista de mensajes -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        @if (Model.Items.Count == 0)
        {
            <div class="text-center py-12">
                <span class="text-6xl">üì≠</span>
                <p class="mt-4 text-gray-500 dark:text-gray-400">No hay mensajes de contacto</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-900/50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Estado</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Nombre</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Contacto</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Ubicaci√≥n</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Mensaje</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Fecha</th>
                            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var contacto in Model.Items)
                        {
                            var rowClass = contacto.Estado == "Nuevo" ? "bg-blue-50/50 dark:bg-blue-900/10" : "";
                            var estadoIcon = contacto.Estado == "Nuevo" ? "üîµ" : (contacto.Estado == "Le√≠do" ? "‚ö™" : "‚úÖ");
                            
                            <tr class="@rowClass hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <span class="text-xl" title="@contacto.Estado">@estadoIcon</span>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <div class="font-medium text-gray-900 dark:text-white @(contacto.Estado == "Nuevo" ? "font-bold" : "")">
                                        @contacto.Nombre
                                    </div>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-600 dark:text-gray-400">
                                        <div class="flex items-center gap-1">
                                            <span>üìß</span>
                                            <a href="mailto:@contacto.Correo" class="hover:text-blue-600 dark:hover:text-blue-400">@contacto.Correo</a>
                                        </div>
                                        <div class="flex items-center gap-1 mt-1">
                                            <span>üì±</span>
                                            <span>@contacto.Telefono</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-4">
                                    <div class="flex flex-col gap-1">
                                        @if (!string.IsNullOrEmpty(contacto.Ubicacion))
                                        {
                                            <div class="flex items-center gap-1 text-sm text-gray-600 dark:text-gray-400">
                                                <span>üìç</span>
                                                <span>@contacto.Ubicacion</span>
                                            </div>
                                        }
                                        @if (contacto.Latitud.HasValue && contacto.Longitud.HasValue)
                                        {
                                            <div class="flex items-center gap-1 text-xs font-mono bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 px-2 py-1 rounded mt-1">
                                                <span>üåê</span>
                                                <span>@contacto.Latitud.Value.ToString("F6"), @contacto.Longitud.Value.ToString("F6")</span>
                                            </div>
                                        }
                                        @if (string.IsNullOrEmpty(contacto.Ubicacion) && !contacto.Latitud.HasValue)
                                        {
                                            <span class="text-gray-400 dark:text-gray-500 text-sm">‚Äî</span>
                                        }
                                    </div>
                                </td>
                                <td class="px-4 py-4">
                                    <div class="text-sm text-gray-600 dark:text-gray-400 max-w-xs truncate" title="@contacto.Mensaje">
                                        @(contacto.Mensaje.Length > 60 ? contacto.Mensaje.Substring(0, 60) + "..." : contacto.Mensaje)
                                    </div>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-600 dark:text-gray-400">
                                        @contacto.FechaEnvio.ToString("dd/MM/yyyy")
                                        <div class="text-xs text-gray-500">@contacto.FechaEnvio.ToString("HH:mm")</div>
                                    </div>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap text-center">
                                    <div class="flex items-center justify-center space-x-1">
                                        <!-- Ver detalle -->
                                        <a href="/Contactos/Detalle/@contacto.Id" 
                                           class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 hover:bg-blue-50 dark:hover:bg-blue-900 p-2 rounded-lg transition-colors"
                                           title="Ver detalle">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </a>
                                        <!-- WhatsApp -->
                                        <a href="https://wa.me/505@(contacto.Telefono.Replace("-", "").Replace(" ", ""))" 
                                           target="_blank"
                                           class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 hover:bg-green-50 dark:hover:bg-green-900 p-2 rounded-lg transition-colors"
                                           title="Contactar por WhatsApp">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                                            </svg>
                                        </a>
                                        <!-- Marcar como respondido -->
                                        @if (contacto.Estado != "Respondido")
                                        {
                                            <form method="post" action="/Contactos/MarcarRespondido/@contacto.Id" class="inline">
                                                <button type="submit" 
                                                        class="text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300 hover:bg-emerald-50 dark:hover:bg-emerald-900 p-2 rounded-lg transition-colors"
                                                        title="Marcar como respondido">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                    </svg>
                                                </button>
                                            </form>
                                        }
                                        <!-- Eliminar -->
                                        <form method="post" action="/Contactos/Eliminar/@contacto.Id" class="inline"
                                              onsubmit="event.preventDefault(); ModalDialog.confirm('¬øEst√°s seguro de eliminar este mensaje?', () => this.submit()); return false;">
                                            <button type="submit" 
                                                    class="text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 hover:bg-red-50 dark:hover:bg-red-900 p-2 rounded-lg transition-colors"
                                                    title="Eliminar">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginaci√≥n -->
            @if (Model.TotalPages > 1)
            {
                <div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="text-sm text-gray-600 dark:text-gray-400">
                        Mostrando @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) de @Model.TotalItems mensajes
                    </div>
                    <div class="flex items-center gap-2">
                        @if (Model.CurrentPage > 1)
                        {
                            <a href="/Contactos?pagina=@(Model.CurrentPage - 1)&tamanoPagina=@tamanoPagina&estado=@estado&busqueda=@busqueda" 
                               class="px-3 py-1 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 transition-colors">
                                ‚Üê
                            </a>
                        }
                        
                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            var isActive = i == Model.CurrentPage;
                            <a href="/Contactos?pagina=@i&tamanoPagina=@tamanoPagina&estado=@estado&busqueda=@busqueda" 
                               class="px-3 py-1 rounded-lg @(isActive ? "bg-blue-600 text-white" : "bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300") transition-colors">
                                @i
                            </a>
                        }
                        
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a href="/Contactos?pagina=@(Model.CurrentPage + 1)&tamanoPagina=@tamanoPagina&estado=@estado&busqueda=@busqueda" 
                               class="px-3 py-1 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 transition-colors">
                                ‚Üí
                            </a>
                        }
                    </div>
                </div>
            }
        }
    </div>

    <!-- Info API -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-4 border border-blue-200 dark:border-blue-800">
        <div class="flex items-start gap-3">
            <span class="text-2xl">üì°</span>
            <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">API para Landing Page</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                    Los formularios de contacto de la landing page env√≠an datos a:
                </p>
                <code class="mt-2 inline-block bg-white dark:bg-gray-800 px-3 py-1 rounded text-sm font-mono text-blue-600 dark:text-blue-400">
                    POST /api/landing/contacto
                </code>
            </div>
        </div>
    </div>
</div>

