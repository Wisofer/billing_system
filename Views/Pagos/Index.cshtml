<!-- Filtros -->
<div class="bg-white border border-gray-200 rounded-lg p-5 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-xs font-medium text-gray-500 mb-2">Tipo de Pago</label>
            <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option>Todos los tipos</option>
                <option>Pago Físico</option>
                <option>Pago Electrónico</option>
            </select>
        </div>
        <div>
            <label class="block text-xs font-medium text-gray-500 mb-2">Banco</label>
            <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option>Todos los bancos</option>
                <option>Banpro</option>
                <option>Lafise</option>
                <option>BAC</option>
                <option>Ficohsa</option>
                <option>BDF</option>
            </select>
        </div>
