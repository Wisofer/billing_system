@model List<billing_system.Models.Entities.Pago>
@using billing_system.Utils
@{
    ViewData["Title"] = "Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var esAdministrador = ViewBag.EsAdministrador as bool? ?? false;
    var totalPagos = ViewBag.TotalPagos as int? ?? 0;
    var montoTotal = ViewBag.MontoTotal as decimal? ?? 0;
    var pagosFisicos = ViewBag.PagosFisicos as int? ?? 0;
    var pagosElectronicos = ViewBag.PagosElectronicos as int? ?? 0;
    var tipoPagoFiltro = ViewBag.TipoPago as string ?? "Todos";
    var bancoFiltro = ViewBag.Banco as string ?? "Todos";
    var fechaFiltro = ViewBag.Fecha as DateTime?;
    var bancos = ViewBag.Bancos as string[] ?? new[] { SD.BancoBanpro, SD.BancoLafise, SD.BancoBAC, SD.BancoFicohsa, SD.BancoBDF };
}

<!-- Notificaciones -->
@if (TempData["Success"] != null)
{
    <div class="mb-4 p-4 bg-green-50 dark:bg-green-900 border border-green-200 dark:border-green-800 rounded-lg text-green-700 dark:text-green-300">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="mb-4 p-4 bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-800 rounded-lg text-red-700 dark:text-red-300">
        @TempData["Error"]
    </div>
}

<!-- Encabezado -->
<div class="mb-6 flex items-center justify-between">
    <div>
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Gestión de Pagos</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Registra y administra los pagos de facturas</p>
    </div>
    <div class="flex space-x-2">
        <a href="/pagos/crear" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors text-sm font-medium flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Registrar Pago</span>
        </a>
        @if (esAdministrador)
        {
            <button type="button" id="btnEliminarSeleccionadas" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors text-sm font-medium flex items-center space-x-2 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                <span>Eliminar Seleccionadas</span>
            </button>
        }
    </div>
</div>

<!-- Estadísticas Rápidas -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Total Pagos</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white">@totalPagos</p>
            </div>
            <div class="w-10 h-10 bg-blue-50 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Monto Total</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white">C$ @montoTotal.ToString("N2")</p>
            </div>
            <div class="w-10 h-10 bg-green-50 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Pagos Físicos</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white">@pagosFisicos</p>
            </div>
            <div class="w-10 h-10 bg-purple-50 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Pagos Electrónicos</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white">@pagosElectronicos</p>
            </div>
            <div class="w-10 h-10 bg-amber-50 dark:bg-amber-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5 mb-6">
    <form method="get" action="/pagos" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Tipo de Pago</label>
            <select name="tipoPago" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="Todos" @(tipoPagoFiltro == "Todos" ? "selected" : "")>Todos los tipos</option>
                <option value="Fisico" @(tipoPagoFiltro == "Fisico" ? "selected" : "")>Pago Físico</option>
                <option value="Electronico" @(tipoPagoFiltro == "Electronico" ? "selected" : "")>Pago Electrónico</option>
            </select>
        </div>
        <div>
            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Banco</label>
            <select name="banco" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="Todos" @(bancoFiltro == "Todos" ? "selected" : "")>Todos los bancos</option>
                @foreach (var banco in bancos)
                {
                    <option value="@banco" @(bancoFiltro == banco ? "selected" : "")>@banco</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Fecha</label>
            <input type="date" name="fecha" value="@(fechaFiltro?.ToString("yyyy-MM-dd") ?? "")"
                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        <div class="flex items-end space-x-2">
            <button type="submit" class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                Filtrar
            </button>
            <a href="/pagos" class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
                Limpiar
            </a>
        </div>
    </form>
</div>

<!-- Tabla de Pagos -->
<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
    <!-- Header de la tabla -->
    <div class="border-b border-gray-100 dark:border-gray-700 px-6 py-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Lista de Pagos (@Model.Count)
        </h3>
    </div>

    <!-- Tabla -->
    @if (Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700 border-b border-gray-100 dark:border-gray-600">
                    <tr>
                        @if (esAdministrador)
                        {
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider w-12">
                                <input type="checkbox" id="selectAll" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" title="Seleccionar todas">
                            </th>
                        }
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"># Pago</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Factura</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Cliente</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Monto</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Tipo</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Banco</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Fecha</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-100 dark:divide-gray-700">
                    @foreach (var pago in Model)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            @if (esAdministrador)
                            {
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <input type="checkbox" name="pagoIds" value="@pago.Id" class="pago-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                </td>
                            }
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">PAG-@pago.Id.ToString("D6")</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-gray-900 dark:text-white">@pago.Factura?.Numero</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900 dark:text-white">@pago.Factura?.Cliente?.Nombre</div>
                                <div class="text-sm text-gray-500 dark:text-gray-400">@pago.Factura?.Cliente?.Codigo</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">@pago.Moneda @pago.Monto.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (pago.TipoPago == SD.TipoPagoFisico)
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-300">
                                        Físico
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 inline-flex text-xs font-medium rounded-md bg-green-50 dark:bg-green-900 text-green-700 dark:text-green-300">
                                        Electrónico
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @(pago.Banco ?? "-")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                @pago.FechaPago.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center space-x-2">
                                    <a href="/facturas/ver/@pago.FacturaId" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 hover:bg-blue-50 dark:hover:bg-blue-900 p-2 rounded-lg transition-colors" title="Ver factura">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    @if (esAdministrador)
                                    {
                                        <form method="post" action="/pagos/eliminar/@pago.Id" class="inline" onsubmit="return confirm('¿Estás seguro de eliminar este pago?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 hover:bg-red-50 dark:hover:bg-red-900 p-2 rounded-lg transition-colors" title="Eliminar pago">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No hay pagos registrados</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Comienza registrando un nuevo pago.</p>
            <div class="mt-6">
                <a href="/pagos/crear" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Registrar Pago
                </a>
            </div>
        </div>
    }
</div>

@if (esAdministrador)
{
    @Html.AntiForgeryToken()

    <script>
        (function() {
            'use strict';
            
            const selectAllCheckbox = document.getElementById('selectAll');
            const pagoCheckboxes = document.querySelectorAll('.pago-checkbox');
            const btnEliminarSeleccionadas = document.getElementById('btnEliminarSeleccionadas');
            
            // Función para actualizar el estado del botón
            function actualizarBotonEliminar() {
                const seleccionadas = Array.from(pagoCheckboxes).filter(cb => cb.checked);
                if (btnEliminarSeleccionadas) {
                    btnEliminarSeleccionadas.disabled = seleccionadas.length === 0;
                }
            }
            
            // Función para actualizar el estado de "Seleccionar todas"
            function actualizarSelectAll() {
                if (pagoCheckboxes.length === 0) {
                    if (selectAllCheckbox) selectAllCheckbox.checked = false;
                    return;
                }
                
                const todasSeleccionadas = Array.from(pagoCheckboxes).every(cb => cb.checked);
                const algunaSeleccionada = Array.from(pagoCheckboxes).some(cb => cb.checked);
                
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = todasSeleccionadas;
                    selectAllCheckbox.indeterminate = algunaSeleccionada && !todasSeleccionadas;
                }
            }
            
            // Event listener para "Seleccionar todas"
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    pagoCheckboxes.forEach(cb => {
                        cb.checked = selectAllCheckbox.checked;
                    });
                    actualizarBotonEliminar();
                });
            }
            
            // Event listeners para checkboxes individuales
            pagoCheckboxes.forEach(cb => {
                cb.addEventListener('change', function() {
                    actualizarBotonEliminar();
                    actualizarSelectAll();
                });
            });
            
            // Event listener para el botón eliminar
            if (btnEliminarSeleccionadas) {
                btnEliminarSeleccionadas.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    const seleccionadas = Array.from(pagoCheckboxes)
                        .filter(cb => cb.checked)
                        .map(cb => parseInt(cb.value));
                    
                    if (seleccionadas.length === 0) {
                        alert('Por favor, selecciona al menos un pago para eliminar.');
                        return;
                    }
                    
                    const confirmacion = confirm(`¿Estás seguro de eliminar ${seleccionadas.length} pago(s)?\n\nEsta acción no se puede deshacer.`);
                    
                    if (!confirmacion) {
                        return;
                    }
                    
                    // Obtener el token anti-forgery (buscar en toda la página)
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (!tokenInput) {
                        alert('Error de seguridad. Por favor, recarga la página e intenta de nuevo.');
                        return;
                    }
                    const token = tokenInput.value;
                    
                    // Crear FormData
                    const formData = new FormData();
                    formData.append('__RequestVerificationToken', token);
                    seleccionadas.forEach(id => {
                        formData.append('pagoIds', id.toString());
                    });
                    
                    // Guardar el contenido original del botón
                    const contenidoOriginal = btnEliminarSeleccionadas.innerHTML;
                    
                    // Mostrar indicador de carga
                    btnEliminarSeleccionadas.disabled = true;
                    btnEliminarSeleccionadas.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg><span>Eliminando...</span>';
                    
                    // Enviar usando fetch
                    try {
                        const response = await fetch('/pagos/eliminar-multiples', {
                            method: 'POST',
                            body: formData
                        });
                        
                        if (response.ok || response.redirected) {
                            // Redirigir a la página de pagos
                            window.location.href = '/pagos';
                        } else {
                            alert('Error al eliminar los pagos. Por favor, intenta de nuevo.');
                            btnEliminarSeleccionadas.disabled = false;
                            btnEliminarSeleccionadas.innerHTML = contenidoOriginal;
                        }
                    } catch (error) {
                        alert('Error al eliminar los pagos. Por favor, intenta de nuevo.');
                        btnEliminarSeleccionadas.disabled = false;
                        btnEliminarSeleccionadas.innerHTML = contenidoOriginal;
                    }
                });
            }
            
            // Inicializar estado
            actualizarBotonEliminar();
            actualizarSelectAll();
        })();
    </script>
}
