@model billing_system.Models.Entities.Egreso
@{
    ViewData["Title"] = "Editar Egreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categorias = ViewBag.Categorias as List<string> ?? new List<string>();
    var metodosPago = ViewBag.MetodosPago as List<string> ?? new List<string>();
}

<!-- Encabezado -->
<div class="mb-6 max-w-3xl mx-auto">
    <div class="flex items-center space-x-3 mb-2">
        <a href="/egresos" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
        </a>
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
                <span class="text-xl mr-2">✏️</span>
                Editar Egreso
            </h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm">Modifica los datos del egreso <span class="font-mono font-semibold text-red-600">@Model.Codigo</span></p>
        </div>
    </div>
</div>

<div class="max-w-3xl mx-auto">
    <form method="post" action="/egresos/editar/@Model.Id" class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="Codigo" value="@Model.Codigo" />

        <!-- Código (solo lectura) -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Código
            </label>
            <input type="text" value="@Model.Codigo" readonly
                   class="w-full px-4 py-2 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 font-mono font-semibold" />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Fecha -->
            <div>
                <label for="Fecha" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Fecha <span class="text-red-500">*</span>
                </label>
                <input type="date" name="Fecha" id="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" />
            </div>

            <!-- Monto -->
            <div>
                <label for="Monto" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Monto (C$) <span class="text-red-500">*</span>
                </label>
                <input type="number" name="Monto" id="Monto" step="0.01" min="0.01" required value="@Model.Monto.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" />
                @if (ViewData.ModelState["Monto"]?.Errors.Any() == true)
                {
                    <p class="text-red-500 text-xs mt-1">@ViewData.ModelState["Monto"]?.Errors.First().ErrorMessage</p>
                }
            </div>
        </div>

        <!-- Descripción -->
        <div class="mt-6">
            <label for="Descripcion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Descripción <span class="text-red-500">*</span>
            </label>
            <input type="text" name="Descripcion" id="Descripcion" required value="@Model.Descripcion" maxlength="500"
                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" />
            @if (ViewData.ModelState["Descripcion"]?.Errors.Any() == true)
            {
                <p class="text-red-500 text-xs mt-1">@ViewData.ModelState["Descripcion"]?.Errors.First().ErrorMessage</p>
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <!-- Categoría -->
            <div>
                <label for="Categoria" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Categoría <span class="text-red-500">*</span>
                </label>
                <select name="Categoria" id="Categoria" required
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white">
                    <option value="">Seleccione una categoría</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat" selected="@(Model.Categoria == cat)">@cat</option>
                    }
                </select>
                @if (ViewData.ModelState["Categoria"]?.Errors.Any() == true)
                {
                    <p class="text-red-500 text-xs mt-1">@ViewData.ModelState["Categoria"]?.Errors.First().ErrorMessage</p>
                }
            </div>

            <!-- Método de Pago -->
            <div>
                <label for="MetodoPago" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Método de Pago
                </label>
                <select name="MetodoPago" id="MetodoPago"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white">
                    @foreach (var mp in metodosPago)
                    {
                        <option value="@mp" selected="@(Model.MetodoPago == mp)">@mp</option>
                    }
                </select>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <!-- Proveedor -->
            <div>
                <label for="Proveedor" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Proveedor / Beneficiario
                </label>
                <input type="text" name="Proveedor" id="Proveedor" value="@Model.Proveedor" maxlength="200"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" />
            </div>

            <!-- Número de Factura -->
            <div>
                <label for="NumeroFactura" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    N° Factura / Recibo
                </label>
                <input type="text" name="NumeroFactura" id="NumeroFactura" value="@Model.NumeroFactura" maxlength="100"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" />
            </div>
        </div>

        <!-- Observaciones -->
        <div class="mt-6">
            <label for="Observaciones" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Observaciones
            </label>
            <textarea name="Observaciones" id="Observaciones" rows="3"
                      class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white resize-none">@Model.Observaciones</textarea>
        </div>

        <!-- Info de registro -->
        <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
            <p class="text-xs text-gray-500 dark:text-gray-400">
                <span class="font-medium">Creado:</span> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                @if (Model.FechaActualizacion.HasValue)
                {
                    <span class="mx-2">|</span>
                    <span class="font-medium">Última modificación:</span> @Model.FechaActualizacion.Value.ToString("dd/MM/yyyy HH:mm")
                }
            </p>
        </div>

        <!-- Botones -->
        <div class="flex justify-end space-x-3 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
            <a href="/egresos" class="px-6 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-600 dark:hover:bg-gray-500 text-gray-700 dark:text-white font-medium rounded-lg transition-colors">
                Cancelar
            </a>
            <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Guardar Cambios
            </button>
        </div>
    </form>
</div>

